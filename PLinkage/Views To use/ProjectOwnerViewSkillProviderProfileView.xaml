<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.ProjectOwnerViewSkillProviderProfileView"
             Title="ProjectOwnerViewSkillProviderProfileView"
             >
    <Grid ColumnDefinitions="*">

        <!-- Main Content -->
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Profile Summary -->
                <Frame BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                    <Grid ColumnDefinitions="80,*,Auto">
                        <BoxView Color="Gray" HeightRequest="60" WidthRequest="60"
                 VerticalOptions="Start" HorizontalOptions="Center"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Juan Dela Cruz" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                            <Label Text="Rating: ★★★★☆" FontSize="12" TextColor="Black"/>
                            <Label Text="Location: Cebu City" FontSize="12" TextColor="Black"/>
                            <Label Text="Joined on: March 12, 2023" FontSize="12" TextColor="Black"/>
                        </VerticalStackLayout>

                        <HorizontalStackLayout Grid.Column="2" Spacing="6" VerticalOptions="Start">
                            <Button Text="Send Offer"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="6"
                    Padding="10,5"
                    WidthRequest="100"/>
                            <Button Text="Message"
                    BackgroundColor="#388E3C"
                    TextColor="White"
                    CornerRadius="6"
                    Padding="10,5"
                    WidthRequest="100"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>


                <!-- Contact Info -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Information" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Label Text="Gender: Male" FontSize="12" TextColor="Black"/>
                        <Label Text="Email: juandelacruz@email.com" FontSize="12" TextColor="Black"/>
                        <Label Text="Mobile: 09123456789" FontSize="12" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Education -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Education" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Frame BackgroundColor="White" CornerRadius="4" Padding="10" HasShadow="False">
                            <VerticalStackLayout>
                                <Label Text="School: University of Cebu" FontSize="12" TextColor="Black"/>
                                <Label Text="Course: BS Information Technology" FontSize="12" TextColor="Black"/>
                                <Label Text="Year Graduated: 2022" FontSize="12" TextColor="Black"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Skills -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Skills" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Frame BackgroundColor="White" CornerRadius="4" Padding="10" HasShadow="False">
                            <VerticalStackLayout>
                                <Label Text="Skill: Web Development" FontSize="12" TextColor="Black"/>
                                <Label Text="Organization: Freelance" FontSize="12" TextColor="Black"/>
                                <Label Text="Experience: 3 years" FontSize="12" TextColor="Black"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Projects -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Projects" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Label Text="• Mobile App Redesign (Lead UI)" FontSize="12" TextColor="Black"/>
                        <Label Text="• Inventory System Migration (Backend Dev)" FontSize="12" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>