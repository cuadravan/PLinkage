<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillProviderProfileView"
             Title="SkillProviderProfileView">
    <Grid ColumnDefinitions="*">

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Profile Overview -->
                <Frame BackgroundColor="#E0E0E0" Padding="15" BorderColor="LightGray">
                    <Grid ColumnDefinitions="*,Auto">
                        <HorizontalStackLayout Spacing="12">
                            <BoxView Color="Gray" WidthRequest="60" HeightRequest="60" CornerRadius="8"/>
                            <VerticalStackLayout>
                                <Label Text="John Doe" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                                <Label Text="★★★★☆" FontSize="14" TextColor="Gold"/>
                                <Label Text="Location: Cebu City" FontSize="13" TextColor="Black"/>
                                <Label Text="Joined: March 2023" FontSize="13" TextColor="Black"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                        <Button Grid.Column="1" Text="Update Profile" BackgroundColor="#A1D490" Padding="10,4" TextColor="Black"/>
                    </Grid>
                </Frame>

                <!-- Information -->
                <Frame BackgroundColor="#E0E0E0" Padding="15" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="Information" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Label Text="Gender: Male" FontSize="13" TextColor="Black"/>
                        <Label Text="Email: john@example.com" FontSize="13" TextColor="Black"/>
                        <Label Text="Mobile: 09123456789" FontSize="13" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Education -->
                <Frame BackgroundColor="#E0E0E0" Padding="15" BorderColor="LightGray">
                    <VerticalStackLayout Spacing="6">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Education" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                            <Button Grid.Column="1" Text="Add Education" BackgroundColor="#D0E8FF" TextColor="Black" Padding="6,2" />
                        </Grid>
                        <Frame BackgroundColor="White" Padding="10" CornerRadius="6" HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="4">
                                    <Label Text="School: USJ-R" FontSize="13" TextColor="Black"/>
                                    <Label Text="Course: BSIT" FontSize="13" TextColor="Black"/>
                                    <Label Text="Year Graduated: 2022" FontSize="13" TextColor="Black"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="1" Text="Update" Padding="6,2" BackgroundColor="#A1D490" TextColor="Black" VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Skills -->
                <Frame BackgroundColor="#E0E0E0" Padding="15" BorderColor="LightGray">
                    <VerticalStackLayout Spacing="6">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Skills" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                            <Button Grid.Column="1" Text="Add Skill" BackgroundColor="#D0E8FF" TextColor="Black" Padding="6,2" />
                        </Grid>
                        <Frame BackgroundColor="White" Padding="10" CornerRadius="6" HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="4">
                                    <Label Text="Skill: Web Development" FontSize="13" TextColor="Black"/>
                                    <Label Text="Organization: Freelance" FontSize="13" TextColor="Black"/>
                                    <Label Text="Experience: 3 years" FontSize="13" TextColor="Black"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="1" Text="Update" Padding="6,2" BackgroundColor="#A1D490" TextColor="Black" VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Projects -->
                <Frame BackgroundColor="#E0E0E0" Padding="15" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="Projects" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Label Text="• Inventory System for ABC Corp" FontSize="13" TextColor="Black"/>
                        <Label Text="• Freelance POS System in MAUI" FontSize="13" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>