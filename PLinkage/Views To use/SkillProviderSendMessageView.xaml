<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillProviderSendMessageView"
             Title="SkillProviderSendMessageView">
    <Grid ColumnDefinitions="*">

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="0" Padding="30">
            <VerticalStackLayout Spacing="20">

                <!-- Header -->
                <Border BackgroundColor="#D0D0D0" StrokeShape="RoundRectangle 6" Padding="10">
                    <Label Text="Send Message" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                </Border>

                <!-- Message Form -->
                <Border BackgroundColor="#F5F5F5" StrokeShape="RoundRectangle 6" Padding="15" StrokeThickness="1">
                    <VerticalStackLayout Spacing="15">

                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 4" Padding="10">
                            <Label x:Name="recipientNameLabel" Text="Juan Dela Cruz" FontAttributes="Bold" TextColor="Black"/>
                        </Border>

                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 4" Padding="0">
                            <Editor x:Name="messageEditor"
                                Placeholder="Type your message here..."
                                HeightRequest="150"
                                BackgroundColor="White"
                                TextColor="Black"/>
                        </Border>

                        <Button Text="Send Message"
                            HorizontalOptions="Center"
                            BackgroundColor="#D0E8FF"
                            TextColor="Black"
                            Padding="10,5"
                            CornerRadius="8"
                            />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>