<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.MainPage"
             Title="Login"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            Spacing="20"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Border 
                StrokeThickness="2"
                Stroke="#5A5A5A" 
                BackgroundColor="#5A5A5A" 
                Padding="25" 
                StrokeShape="Rectangle 20"
                HorizontalOptions="Fill"
                WidthRequest="300">
                <VerticalStackLayout 
                    Spacing="20">

                    <Label
                        Text="Sign in"
                        FontSize="26"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalTextAlignment="Center"/>

                    <Entry
                        x:Name="EmailEntry"
                        Placeholder="Email Address"
                        Keyboard="Email"
                        BackgroundColor="White"
                        HeightRequest="55"  
                        FontSize="14"/>

                    <Entry
                        x:Name="PasswordEntry"
                        Placeholder="Password"
                        IsPassword="True"
                        BackgroundColor="White"
                        HeightRequest="55"
                        FontSize="14"/>

                    <Button
                        Text="Login"
                        Clicked="OnBtnLoginClicked"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        FontSize="16"/>

                    <Button
                        Text="Register"
                        Clicked="OnBtnRegisterClicked"
                        BackgroundColor="Gray"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        FontSize="16"/>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
