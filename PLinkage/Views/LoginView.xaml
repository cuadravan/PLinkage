<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.LoginView"
             Title="Login Page"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            Spacing="20"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Border 
                StrokeThickness="2"
                Stroke="#5A5A5A" 
                BackgroundColor="#F8F8F8" 
                Padding="25" 
                StrokeShape="Rectangle 20"
                HorizontalOptions="Fill"
                WidthRequest="350">

                <VerticalStackLayout Spacing="25">

                    <Label
                        Text="Sign In"
                        FontSize="28"
                        FontAttributes="Bold"
                        TextColor="#333"
                        HorizontalOptions="Center" />

                    <Entry
                        x:Name="EmailEntry"
                        Placeholder="Email Address"
                        Keyboard="Email"
                        BackgroundColor="White"
                        HeightRequest="50"  
                        FontSize="14"
                        HorizontalOptions="Fill" 
                        Text="{Binding Email}"/>

                    <Entry
                        x:Name="PasswordEntry"
                        Placeholder="Password"
                        IsPassword="True"
                        BackgroundColor="White"
                        HeightRequest="50"
                        FontSize="14"
                        HorizontalOptions="Fill" 
                        Text="{Binding Password}"/>

                    <!-- Error Message Label -->
                    <Label
                        Text="{Binding ErrorMessage}"
                        TextColor="Red"
                        FontSize="13"
                        FontAttributes="Italic"
                        HorizontalOptions="Start" />


                    <Button
                        Text="Login"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        FontSize="16"
                        FontAttributes="Bold"
                        Command="{Binding LoginCommand}"
                        HorizontalOptions="Fill" />

                    <Button
                        Text="Register"
                        Command="{Binding GoToRegisterCommand}"
                        BackgroundColor="#6C757D"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        FontSize="16"
                        FontAttributes="Bold"
                        HorizontalOptions="Fill" />

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
