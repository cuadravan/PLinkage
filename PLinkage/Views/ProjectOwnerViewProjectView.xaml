<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.ProjectOwnerViewProjectView"
             Title="ProjectOwnerViewProjectView">
    <Grid ColumnDefinitions="*">

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Project Info -->
                <Frame BackgroundColor="#E0E0E0" Padding="10" BorderColor="LightGray">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding ProjectName}" FontAttributes="Bold" FontSize="14" TextColor="black"/>
                        <Label Text="{Binding ProjectLocation}" FontSize="14" TextColor="black"/>
                        <Label Text="{Binding ProjectDescription}" HeightRequest="100" BackgroundColor="White" TextColor="black"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Start/End Date + Priority/Status + Resources -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">

                    <!-- Start & End Dates -->
                    <Frame Grid.Column="0" BackgroundColor="#E0E0E0" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Start Date" FontAttributes="Bold" TextColor="black"/>
                            <Frame Padding="0" HasShadow="False" BorderColor="LightGray" BackgroundColor="White">
                                <DatePicker Date="{Binding ProjectStartDate}" TextColor="black" IsEnabled="False"/>
                            </Frame>
                            <Label Text="End Date" FontAttributes="Bold" TextColor="black"/>
                            <Frame Padding="0" HasShadow="False" BorderColor="LightGray" BackgroundColor="White">
                                <DatePicker Date="{Binding ProjectEndDate}" TextColor="black" IsEnabled="False"/>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Priority & Status -->
                    <Frame Grid.Column="1" BackgroundColor="#E0E0E0" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Priority" FontAttributes="Bold" TextColor="black"/>
                            <Label Text="{Binding ProjectPriority}"
                                BackgroundColor="White"
                                TextColor="#444"
                                
                                />
                            <Label Text="Status" FontAttributes="Bold" TextColor="black"/>
                            <Label Text="{Binding ProjectStatus}"
                                BackgroundColor="White"
                                TextColor="#444"
                                
                                />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Number of Resources -->
                    <Frame Grid.Column="2" BackgroundColor="#E0E0E0" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Number of Resources" FontAttributes="Bold" TextColor="black"/>
                            <Label Text="{Binding ProjectResourcesNeeded}" BackgroundColor="White" TextColor="black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Employed Skill Providers & Required Skills -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="20">

                    <!-- Employed Skill Providers -->
                    <Frame Grid.Column="0" BackgroundColor="#E0E0E0" Padding="10" BorderColor="LightGray">
                        <CollectionView ItemsSource="{Binding EmployedSkillProviders}"
                                HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="6,3" Margin="2"
                                        BackgroundColor="#DDEEFF"
                                        BorderColor="LightGray"
                                        HasShadow="False"
                                        CornerRadius="10">      
                                        <HorizontalStackLayout Spacing="8">
                                            <Label Text="{Binding UserFirstName}" TextColor="Black"/>
                                            <Label Text="{Binding UserLastName}" TextColor="Black"/>
                                            <Button Text="Remove Skill Provider"
                                                FontSize="12"
                                                BackgroundColor="Red"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveSkillProviderCommand}"
                                                CommandParameter="{Binding .}" />   
                                        </HorizontalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Frame>

                    <!-- Required Skills -->
                    <Frame Grid.Column="1" BackgroundColor="#E0E0E0" Padding="10" BorderColor="LightGray">
                        <CollectionView ItemsSource="{Binding ProjectSkillsRequired}"
                            HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="6,3" Margin="2"
                                            BackgroundColor="#DDEEFF"
                                            BorderColor="LightGray"
                                            HasShadow="False"
                                            CornerRadius="10">
                                        <HorizontalStackLayout Spacing="8">
                                            <Label Text="{Binding .}" TextColor="Black"/>
                                        </HorizontalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Frame>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>