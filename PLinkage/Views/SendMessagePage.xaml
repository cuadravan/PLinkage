<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SendMessagePage"
             Title="Send Message"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">

        <!-- SIDEBAR -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png"
               HeightRequest="80" WidthRequest="80"
               BackgroundColor="Gray"
               HorizontalOptions="Center"/>
            <Button Text="Home" BackgroundColor="White" Clicked="OnHomeClicked"/>
            <Button Text="Profile" BackgroundColor="White" Clicked="OnProfileClicked"/>
            <Button Text="Browse Skill Providers" BackgroundColor="White" Clicked="OnBrowseClicked"/>
            <Button Text="Applications and Offers" BackgroundColor="White" Clicked="OnApplicationsClicked"/>
            <Button Text="Messages" BackgroundColor="White" Clicked="OnMessagesClicked"/>
        </StackLayout>

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <Frame Padding="10" BackgroundColor="#E0E0E0" BorderColor="LightGray">
                    <Label Text="Send Message"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                </Frame>

                <!-- Message Form -->
                <Frame BackgroundColor="#E0E0E0" Padding="15" BorderColor="LightGray">
                    <VerticalStackLayout Spacing="12">

                        <!-- Name -->
                        <Label Text="To:" FontSize="14" FontAttributes="Bold" TextColor="Black"/>
                        <Entry x:Name="RecipientNameEntry"
                           Placeholder="Recipient Name"
                           BackgroundColor="White"
                           TextColor="Black"/>

                        <!-- Message -->
                        <Label Text="Message:" FontSize="14" FontAttributes="Bold" TextColor="Black"/>
                        <Editor x:Name="MessageEditor"
                            Placeholder="Type your message here..."
                            BackgroundColor="White"
                            TextColor="Black"
                            HeightRequest="150"/>

                        <!-- Send Button -->
                        <Button Text="Send Message"
                            BackgroundColor="#A1D490"
                            TextColor="Black"
                            Padding="12,6"
                            HorizontalOptions="Center"
                            Clicked="OnSendMessageClicked"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>