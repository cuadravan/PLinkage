<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             x:Class="PLinkage.Views.AdminHomeView"
             Title="Home - Admin"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <ScrollView Padding="50">
        <VerticalStackLayout Spacing="16">

            <!-- Dashboard Stats -->
            <Border BackgroundColor="#7C4DFF" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Welcome, Admin!"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White" />

                    <Label Text="{Binding ActiveProjects, StringFormat='Active Projects: {0}'}"
                               FontSize="14"
                               TextColor="White"/>
                    <Label Text="{Binding CompletedProjects, StringFormat='Completed Projects: {0}'}"
                               FontSize="14"
                               TextColor="White"/>
                    <Label Text="{Binding EmploymentRatio, StringFormat='Employment Ratio (excluding deactivated): {0}'}"
                               FontSize="14"
                               TextColor="White"/>
                </VerticalStackLayout>
            </Border>

            <!-- Project Filter -->
            <Border BackgroundColor="#FFFFFF" StrokeThickness="1" Stroke="#7C4DFF"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="All Projects"
       FontSize="16"
       FontAttributes="Bold"
       TextColor="Black" />
                    <Label Text="Filter Projects by Project Status"
                               FontSize="14"
                               
                               TextColor="Black" />

                    <Picker Title=""
                                ItemsSource="{Binding ProjectStatusFilterOptions}"
                                SelectedItem="{Binding SelectedProjectFilter}" />
                </VerticalStackLayout>
            </Border>

            <!-- Project List -->
            <FlexLayout BindableLayout.ItemsSource="{Binding FilteredProjects}"
    Wrap="Wrap"
    Direction="Row"
    AlignItems="Start"
    JustifyContent="Center"
    AlignContent="Center">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White" StrokeThickness="1" Stroke="#7C4DFF"
                    Padding="12" StrokeShape="RoundRectangle 10" Margin="0,0,10,10" HeightRequest="120" WidthRequest="340">
                            <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">

                                <!-- Avatar / Icon -->
                                <BoxView Color="#7C4DFF" HeightRequest="60" WidthRequest="60"
                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                <!-- Project Info -->
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding ProjectName}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectStatus, StringFormat='Status: {0}'}"
                               FontSize="12"
                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectLocation, StringFormat='Location: {0}'}"
                               FontSize="12"
                               TextColor="Gray"/>
                                </VerticalStackLayout>

                                <!-- View Button -->
                                <Button Text="View"
                            BackgroundColor="#7C4DFF"
                            Padding="10,4"
                            CornerRadius="6"
                            VerticalOptions="Center"
                                            WidthRequest="100"
                            Grid.Column="2"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminHomeViewModel}}, Path=ViewProjectCommand}"
                            CommandParameter="{Binding .}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>



            <!-- Skill Provider Filters -->
            <Border BackgroundColor="White" StrokeThickness="1" Stroke="#7C4DFF"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="All Skill Providers"
       FontSize="16"
       FontAttributes="Bold"
       TextColor="Black" />
                    <Label Text="Filter Skill Providers by"
                               FontSize="14"
                               TextColor="Black" />

                    <Picker Title="Employment Status"
                                ItemsSource="{Binding SkillProviderFilterOptions}"
                                SelectedItem="{Binding SelectedSkillEmploymentFilter}" />

                    <Picker Title="Account Status"
                                ItemsSource="{Binding SkillProviderStatusFilterOptions}"
                                SelectedItem="{Binding SelectedSkillStatusFilter}" />
                </VerticalStackLayout>
            </Border>

            <!-- Skill Provider List -->
            <FlexLayout BindableLayout.ItemsSource="{Binding FilteredSkillProviders}"
                 Wrap="Wrap"
                 Direction="Row"
                 AlignItems="Start"
                 JustifyContent="Center"
                 AlignContent="Center">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="#FFFFFF" 
            StrokeThickness="1" 
            Stroke="#7C4DFF"
            Padding="12" 
            StrokeShape="RoundRectangle 10"
            HeightRequest="120" WidthRequest="340" 
            Margin="0,0,10,10">
                            <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">
                                <BoxView Color="#7C4DFF" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding UserFirstName}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               TextColor="Black"/>
                                    <Label Text="{Binding UserStatus, StringFormat='Status: {0}'}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                    <Label Text="{Binding UserLocation}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                </VerticalStackLayout>

                                <Button Text="View"
                                            BackgroundColor="#7C4DFF"
                                        TextColor="White"
                                            WidthRequest="100"       
                                            Padding="10,4"
                                            CornerRadius="6"
                                            VerticalOptions="Center"
                                            Grid.Column="2"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminHomeViewModel}}, Path=ViewSkillProviderCommand}"
CommandParameter="{Binding .}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
