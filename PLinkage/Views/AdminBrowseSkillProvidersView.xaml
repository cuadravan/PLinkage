<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.AdminBrowseSkillProvidersView"
             Title="Browse Skill Providers"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             xmlns:local="clr-namespace:PLinkage.Converters">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SortToVisibilityConverter x:Key="SortToVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*">
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="All Skill Providers (Admin View)"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label Text="Manage and monitor all skill providers, including deactivated ones."
                               FontSize="14"
                               TextColor="Black" />
                    </VerticalStackLayout>
                </Border>

                <!-- Sorting Controls -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="6">

                        <Label Text="Filter by Category"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <Picker Title="Select Category"
                                ItemsSource="{Binding CategorySortOptions}"
                                SelectedItem="{Binding CategorySortSelection}" />

                        <Picker Title="Select Location"
                                ItemsSource="{Binding CebuLocations}"
                                SelectedItem="{Binding SelectedLocation}"
                                IsVisible="{Binding CategorySortSelection, Converter={StaticResource SortToVisibilityConverter}}" />

                        <Label Text="Filter by User Status"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,12,0,0" />

                        <Picker Title="Select Status"
                                ItemsSource="{Binding StatusSortOptions}"
                                SelectedItem="{Binding StatusSortSelection}" />

                    </VerticalStackLayout>
                </Border>

                <!-- Skill Provider List -->
                <CollectionView ItemsSource="{Binding FilteredSkillProviders}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#F9F9F9" StrokeThickness="1" Stroke="LightGray"
                                    Padding="12" StrokeShape="RoundRectangle 10" Margin="0,0,0,10">
                                <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">

                                    <!-- Placeholder BoxView for profile photo -->
                                    <BoxView Color="Gray" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                        <Label Text="{Binding UserFirstName}" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                        <Label Text="{Binding UserLastName}" FontSize="14" TextColor="Black"/>
                                        <Label Text="{Binding UserLocation}" FontSize="12" TextColor="Black"/>
                                        <Label Text="{Binding UserStatus}" FontSize="12" TextColor="Black"/>
                                    </VerticalStackLayout>

                                    <Button Text="View"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminBrowseSkillProviderViewModel}}, Path=ViewSkillProviderCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="2"
                                            BackgroundColor="#1976D2"

                                            Padding="10,4"
                                            CornerRadius="6"
                                            VerticalOptions="Center"
                                            WidthRequest="100"       />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
