<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.BrowseSkillProvidersPage"
             Title="Browse Skill Providers"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">
        <!-- SIDEBAR -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png"
               HeightRequest="80" WidthRequest="80"
               BackgroundColor="Gray"
               HorizontalOptions="Center" />

            <Button x:Name="homeBtn" Text="Home" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnHomeClicked" />

            <Button x:Name="profileBtn" Text="Profile" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnProfileClicked" />

            <Button x:Name="browseBtn" Text="Browse Skill Providers" Padding="12" CornerRadius="6"
                BackgroundColor="#D0E8FF" TextColor="Black" Clicked="OnBrowseClicked" />

            <Button x:Name="appsBtn" Text="Applications and Offers" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnApplicationsClicked" />

            <Button x:Name="messagesBtn" Text="Messages" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnMessagesClicked" />
        </StackLayout>

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="15">

                <!-- Page Header -->
                <Frame Padding="10" BackgroundColor="#D9D9D9" HasShadow="False">
                    <Label Text="Browse Skill Providers"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black" />
                </Frame>

                <!-- Scrollable List -->
                <VerticalStackLayout Spacing="15">

                    <!-- Skill Provider Card (Sample 1) -->
                    <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="8" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,80" VerticalOptions="Center" Padding="5">
                            <BoxView Color="#B0B0B0" WidthRequest="50" HeightRequest="50" CornerRadius="4" VerticalOptions="Center" Margin="5" />

                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Name: John Doe" FontSize="14" TextColor="Black" />
                                <Label Text="Rating: ★★★★☆" FontSize="14" TextColor="Black" />
                                <Label Text="Location: Cebu City" FontSize="14" TextColor="Black" />
                            </StackLayout>

                            <StackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center">
                                <Button Text="View" WidthRequest="60" BackgroundColor="#B49AE2" TextColor="Black" CornerRadius="12" Padding="5,2" Clicked="OnViewClicked" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <!-- Skill Provider Card (Sample 2) -->
                    <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="8" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,80" VerticalOptions="Center" Padding="5">
                            <BoxView Color="#B0B0B0" WidthRequest="50" HeightRequest="50" CornerRadius="4" VerticalOptions="Center" Margin="5" />

                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Name: Jane Smith" FontSize="14" TextColor="Black" />
                                <Label Text="Rating: ★★★★★" FontSize="14" TextColor="Black" />
                                <Label Text="Location: Davao City" FontSize="14" TextColor="Black" />
                            </StackLayout>

                            <StackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center">
                                <Button Text="View" WidthRequest="60" BackgroundColor="#B49AE2" TextColor="Black" CornerRadius="12" Padding="5,2" Clicked="OnViewClicked" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <!-- Skill Provider Card (Sample 3) -->
                    <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="8" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,80" VerticalOptions="Center" Padding="5">
                            <BoxView Color="#B0B0B0" WidthRequest="50" HeightRequest="50" CornerRadius="4" VerticalOptions="Center" Margin="5" />

                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="Name: Carlos Rivera" FontSize="14" TextColor="Black" />
                                <Label Text="Rating: ★★★☆☆" FontSize="14" TextColor="Black" />
                                <Label Text="Location: Iloilo City" FontSize="14" TextColor="Black" />
                            </StackLayout>

                            <StackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center">
                                <Button Text="View" WidthRequest="60" BackgroundColor="#B49AE2" TextColor="Black" CornerRadius="12" Padding="5,2" Clicked="OnViewClicked" />
                            </StackLayout>
                        </Grid>
                    </Frame>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>