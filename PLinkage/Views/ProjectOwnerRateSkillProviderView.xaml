<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PLinkage.Views.ProjectOwnerRateSkillProviderView"
    xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
    xmlns:models="clr-namespace:PLinkage.Models"
    Title="Rate Employed Skill Providers"
    Shell.NavBarIsVisible="False">

    <Grid Padding="20">
        <ScrollView>
            <Border Background="#F1F0FC" Stroke="LightGray" VerticalOptions="Center" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="30" WidthRequest="400">
            <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

                <!-- Project Name Header -->
                <Border Background="#7C4DFF" Stroke="LightGray" StrokeThickness="1" Padding="10" StrokeShape="RoundRectangle 5">
                    <Label
                        Text="{Binding ProjectName}"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="White" />
                </Border>

                <!-- Rating Table -->
                <Border Background="#FFFFFF" Stroke="LightGray" StrokeThickness="1" Padding="10" StrokeShape="RoundRectangle 5">
                    <CollectionView
                        ItemsSource="{Binding SkillProvidersToRate}"
                        SelectionMode="None">

                        <CollectionView.Header>
                            <Grid ColumnSpacing="10" Padding="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <HorizontalStackLayout>
                                    <Label 
                                        Text="Name" 
                                        FontAttributes="Bold" 
                                        TextColor="Black"
                                        VerticalOptions="Center" />

                                    <Label 
                                        Text="Rating"
                                        FontAttributes="Bold"
                                        TextColor="Black"
                                        VerticalOptions="Center"
                                        Margin="20,0,0,0" />
                                    <!-- slight left margin to separate -->
                                </HorizontalStackLayout>
                            </Grid>
                        </CollectionView.Header>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    RowDefinitions="Auto"
                                    Padding="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <HorizontalStackLayout Spacing="20">
                                        <!-- Full Name -->
                                        <Label
                                            Text="{Binding UserFirstName}"
                                            TextColor="Black"
                                            VerticalOptions="Center" />

                                        <!-- Rating control -->
                                        <toolkit:RatingView
                                            Rating="{Binding TempRating, Mode=TwoWay}"
                                            MaximumRating="5"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center" />
                                    </HorizontalStackLayout>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                    </CollectionView>
                </Border>

                <!-- Submit Button -->
                <HorizontalStackLayout HorizontalOptions="Center" Padding="10">
                    <Button
                        Text="Submit Rating"
                        Padding="12,6"
                        BackgroundColor="#7C4DFF"
                        TextColor="White"
                        Command="{Binding SubmitRatingsCommand}" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
            </Border>
        </ScrollView>
    </Grid>
</ContentPage>
