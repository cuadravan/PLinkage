<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             x:Class="PLinkage.Views.SkillProviderHomeView"
             Title="Home - Skill Provider"
             Shell.NavBarIsVisible="False">
    <ScrollView Padding="50">
        <VerticalStackLayout Spacing="16">

            <Border BackgroundColor="#7C4DFF" StrokeThickness="0"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="{Binding UserName, StringFormat='Welcome back, {0}!'}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White" />

                    <Label Text="{Binding SummaryText}"
                           FontSize="14"
                           TextColor="White"/>

                </VerticalStackLayout>
            </Border>

            <!-- Suggested Header and Sort Picker -->
            <Border BackgroundColor="#FFFFFF" StrokeThickness="1" Stroke="#7C4DFF"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Suggested for you"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />

                    <!-- Sort Options Picker -->
                    <Picker Title="Sort by"
                                ItemsSource="{Binding SortOptions}"
                                SelectedItem="{Binding SortSelection}" />
                </VerticalStackLayout>
            </Border>

            <!-- Suggested Projects List -->
            <FlexLayout BindableLayout.ItemsSource="{Binding SuggestedProjects}"
                Wrap="Wrap"
                Direction="Row"
                AlignItems="Start"
                JustifyContent="Center"
                AlignContent="Center">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="#FFFFFF" 
StrokeThickness="1" 
Stroke="#7C4DFF"
Padding="12" 
StrokeShape="RoundRectangle 10"
HeightRequest="120" WidthRequest="340" 
Margin="0,0,10,10">
                            <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">
                                <BoxView Color="#7C4DFF" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding ProjectName}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectResourcesAvailable, StringFormat='{0} available slot/s'}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectLocation}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                </VerticalStackLayout>

                                <Button Text="View"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderHomeViewModel}}, Path=ViewProjectCommand}"
                                    CommandParameter="{Binding .}"
                                    Grid.Column="2"
                                    BackgroundColor="#7C4DFF"
                                    Padding="10,4"
                                    CornerRadius="6"
                                    WidthRequest="100"
                                    VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
