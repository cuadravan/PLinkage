<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             x:Class="PLinkage.Views.SkillProviderHomeView"
             Title="SkillProviderHomeView">
    <Grid ColumnDefinitions="*">
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Welcome Banner -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{Binding UserName, StringFormat='Welcome back, {0}!'}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <Label Text="{Binding SummaryText}"
                           FontSize="14"
                           TextColor="Black"/>

                    </VerticalStackLayout>
                </Border>

                <!-- Suggested Header and Sort Picker -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Suggested for you"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <!-- Sort Options Picker -->
                        <Picker Title="Sort by"
                                ItemsSource="{Binding SortOptions}"
                                SelectedItem="{Binding SortSelection}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Suggested Projects List -->
                <CollectionView ItemsSource="{Binding SuggestedProjects}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#F9F9F9" StrokeThickness="1" Stroke="LightGray"
                                    Padding="12" StrokeShape="RoundRectangle 10">
                                <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">
                                    <BoxView Color="Gray" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                        <Label Text="{Binding ProjectName}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               TextColor="Black"/>
                                        <Label Text="{Binding ProjectResourcesAvailable, StringFormat='{0} available slot/s'}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                        <Label Text="{Binding ProjectLocation}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                    </VerticalStackLayout>

                                    <Button Text="View"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderHomeViewModel}}, Path=ViewProjectCommand}"
                                    CommandParameter="{Binding .}"
                                    Grid.Column="2"
                                    BackgroundColor="#D0E8FF"
                                    Padding="10,4"
                                    CornerRadius="6"
                                    VerticalOptions="Center"
                                    TextColor="Black"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
