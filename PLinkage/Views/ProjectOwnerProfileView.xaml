<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             x:Class="PLinkage.Views.ProjectOwnerProfileView"
             Title="ProjectOwnerProfileView">

    <Grid ColumnDefinitions="*">
        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- HEADER -->
                <Border Background="#E0E0E0" Padding="16" StrokeThickness="0" StrokeShape="RoundRectangle 8">
                    <Grid ColumnDefinitions="*,Auto">
                        <HorizontalStackLayout Spacing="12">
                            <BoxView Color="Gray" HeightRequest="60" WidthRequest="60" />
                            <VerticalStackLayout>
                                <Label Text="{Binding UserName}" FontAttributes="Bold" FontSize="16" TextColor="Black" />
                                <Label Text="{Binding UserLocation, StringFormat='Location: {0}'}" FontSize="12" TextColor="Black" />
                                <Label Text="{Binding DateJoined, StringFormat='Joined on: {0:MMMM dd, yyyy}'}" FontSize="12" TextColor="Black" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                        <Button Text="Update Profile"
                                BackgroundColor="Red" Padding="10,4" CornerRadius="6"
                                Command="{Binding UpdateProfileCommand}"
                                HorizontalOptions="End" />
                    </Grid>
                </Border>

                <!-- INFO SECTION -->
                <Border Background="#E0E0E0" Padding="16" StrokeThickness="0" StrokeShape="RoundRectangle 8">
                    <VerticalStackLayout>
                        <Label Text="Information" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                        <Label Text="{Binding UserGender, StringFormat='Gender: {0}'}" FontSize="12" TextColor="Black" />
                        <Label Text="{Binding UserEmail, StringFormat='Email: {0}'}" FontSize="12" TextColor="Black" />
                        <Label Text="{Binding UserPhone, StringFormat='Mobile: {0}'}" FontSize="12" TextColor="Black" />
                    </VerticalStackLayout>
                </Border>

                <!-- PROJECT LIST SECTION -->
                <Border Background="#E0E0E0" Padding="16" StrokeThickness="0" StrokeShape="RoundRectangle 8">
                    <VerticalStackLayout Spacing="12">

                        <!-- Sort + Create -->
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout>
                                <Label Text="Sort By" TextColor="Black" FontSize="14" FontAttributes="Bold" Margin="0,0,0,4" />
                                <Border Background="White" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 6"
                                        HeightRequest="40" WidthRequest="200" Padding="0">
                                    <Grid>
                                        <Picker Title="Select Status"
                                                ItemsSource="{Binding SortOptions}"
                                                SelectedItem="{Binding SortSelection}"
                                                TextColor="Black" FontSize="14" TitleColor="DarkGray"
                                                BackgroundColor="Transparent"
                                                HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                                                Margin="0,-15,0,0" HeightRequest="75" />
                                    </Grid>
                                </Border>
                            </VerticalStackLayout>

                            <Button Text="Create Project"
                                    BackgroundColor="ForestGreen" Padding="10,4" CornerRadius="6"
                                    Command="{Binding AddProjectCommand}"
                                    HorizontalOptions="End" VerticalOptions="End" />
                        </Grid>

                        <!-- PROJECT CARDS -->
                        <CollectionView ItemsSource="{Binding OwnedProjects}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Stroke="LightGray" StrokeThickness="1" Padding="10" StrokeShape="RoundRectangle 6" Background="White">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding ProjectName}" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                                                <Label Text="{Binding ProjectDescription}" FontSize="14" TextColor="Black" />
                                                <Label Text="{Binding ProjectStatus, StringFormat='Status: {0}'}" FontSize="12" TextColor="Black" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="1" Spacing="4" HorizontalOptions="End">
                                                <Button Text="View"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewProjectCommand}"
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="Blue"/>
                                                <Button Text="Update Project"
                                                        BackgroundColor="#4CAF50"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.UpdateProjectCommand}"
                                                        CommandParameter="{Binding .}"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
