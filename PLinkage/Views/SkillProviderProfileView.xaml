<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillProviderProfileView"
             Title="SkillProviderProfileView"
             xmlns:models="clr-namespace:PLinkage.Models"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels">
    <Grid ColumnDefinitions="*">

        <!-- Main Content -->
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Profile Summary -->
                <Border Background="#E0E0E0" Padding="16" StrokeShape="RoundRectangle 8" StrokeThickness="0">
                    <Grid ColumnDefinitions="80,*,Auto">
                        <BoxView Color="Gray" HeightRequest="60" WidthRequest="60"
                                 VerticalOptions="Start" HorizontalOptions="Center" />

                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{Binding UserName}" FontAttributes="Bold" FontSize="16" TextColor="Black" />
                            <Label Text="{Binding UserRating, StringFormat='Rating: {0:F1}'}" FontSize="12" TextColor="Black" />
                            <Label Text="{Binding UserLocation, StringFormat='Location: {0}'}" FontSize="12" TextColor="Black" />
                            <Label Text="{Binding DateJoined, StringFormat='Joined on: {0:MMMM dd, yyyy}'}" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>

                        <HorizontalStackLayout Grid.Column="2" Spacing="6" VerticalOptions="Start">

                            <!-- Visible if Skill Provider -->
                            <Button Text="Update Profile"
                                BackgroundColor="Red" Padding="10,4" CornerRadius="6"
                                Command="{Binding UpdateProfileCommand}"
                                    WidthRequest="150"
                                HorizontalOptions="End" />
                            

                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Contact Info -->
                <Border Background="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="16" StrokeThickness="0">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Information" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                        <Label Text="{Binding UserGender, StringFormat='Gender: {0}'}" FontSize="12" TextColor="Black" />
                        <Label Text="{Binding UserEmail, StringFormat='Email: {0}'}" FontSize="12" TextColor="Black" />
                        <Label Text="{Binding UserPhone, StringFormat='Mobile: {0}'}" FontSize="12" TextColor="Black" />
                    </VerticalStackLayout>
                </Border>

                <!-- Education -->
                <Border Background="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="16" StrokeThickness="0">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Education" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                        <Button Text="Add Education"
                                BackgroundColor="ForestGreen"
                                CornerRadius="6" Padding="10,4"
                                HorizontalOptions="End"
                                VerticalOptions="End"
                                WidthRequest="150"
                                Command="{Binding AddEducationCommand}"/>
                        

                        <CollectionView ItemsSource="{Binding Educations}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Education">
                                    <Border Background="White"
                                            Stroke="LightGray"
                                            StrokeThickness="1"
                                            StrokeShape="RoundRectangle 4"
                                            Padding="10"
                                            Margin="0,4">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding SchoolAttended, StringFormat='School: {0}'}" FontSize="12" TextColor="Black" />
                                            <Label Text="{Binding CourseName, StringFormat='Course: {0}'}" FontSize="12" TextColor="Black" />
                                            <Label Text="{Binding TimeGraduated, StringFormat='Graduated: {0:MMMM yyyy}'}" FontSize="12" TextColor="Black" />
                                            <Button Text="Update Education"
                                                            BackgroundColor="Blue"
                                                            CornerRadius="6" Padding="10,4"
                                                            HorizontalOptions="End"   
                                                            WidthRequest="150"
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderProfileViewModel}}, Path=UpdateEducationCommand}"
                                                            CommandParameter="{Binding .}" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Skills -->
                <Border Background="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="16" StrokeThickness="0">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Skills" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                        <Button Text="Add Skill"
                                WidthRequest="150"
                                BackgroundColor="ForestGreen"
                                CornerRadius="6" Padding="10,4"
                                HorizontalOptions="End" 
                                Command="{Binding AddSkillCommand}"/>

                        <CollectionView ItemsSource="{Binding Skills}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Skill">
                                    <Border Background="White"
                                            Stroke="LightGray"
                                            StrokeThickness="1"
                                            StrokeShape="RoundRectangle 4"
                                            Padding="10"
                                            Margin="0,4">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding SkillName, StringFormat='Skill: {0}'}" FontSize="12" TextColor="Black" />
                                            <Label Text="{Binding SkillDescription, StringFormat='Description: {0}'}" FontSize="12" TextColor="Black" />
                                            <Label Text="{Binding SkillLevel, StringFormat='Level: {0}/5'}" FontSize="12" TextColor="Black" />
                                            <Label Text="{Binding TimeAcquired, StringFormat='Acquired: {0:MMMM yyyy}'}" FontSize="12" TextColor="Black" />
                                            <Label Text="{Binding OrganizationInvolved, StringFormat='Organization: {0}'}" FontSize="12" TextColor="Black" />
                                            <Label Text="{Binding YearsOfExperience, StringFormat='Experience: {0} years'}" FontSize="12" TextColor="Black" />
                                            <!-- Update Skill Button -->
                                            <Button Text="Update Skill"
                                                        BackgroundColor="Blue"
                                                        CornerRadius="6" Padding="10,4"
                                                        WidthRequest="150"
                                                        HorizontalOptions="End"           
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderProfileViewModel}}, Path=UpdateSkillCommand}"
                                                        CommandParameter="{Binding .}" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Employed Projects -->
                <Border Background="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="16" StrokeThickness="0">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Employed Projects" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                        <CollectionView ItemsSource="{Binding EmployedProjects}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Project">
                                    <Border Background="White"
                            Stroke="LightGray"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 6"
                            Padding="10"
                            Margin="0,4">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding ProjectName}" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                                                <Label Text="{Binding ProjectDescription}" FontSize="14" TextColor="Black" />
                                                <Label Text="{Binding ProjectStatus, StringFormat='Status: {0}'}" FontSize="12" TextColor="Black" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="1" Spacing="4" HorizontalOptions="End">
                                                <Button Text="View"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderProfileViewModel}}, Path=ViewProjectCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="ForestGreen"
                                        TextColor="White"
                                        CornerRadius="6"
                                                        WidthRequest="150"
                                        Padding="10,4"/>
                                                <Button Text="Resign"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderProfileViewModel}}, Path=ResignProjectCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        CornerRadius="6"
                                        Padding="10,4"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>