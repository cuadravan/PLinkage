<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.AdminProjectsPage"
             Title="Admin - Browse Projects"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">
        <!-- Sidebar -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png"
               HeightRequest="80"
               WidthRequest="80"
               BackgroundColor="Gray"
               HorizontalOptions="Center" />

            <Frame x:Name="homeFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6">
                <Button Text="Home" BackgroundColor="Transparent" Padding="0" Clicked="OnHomeClicked" TextColor="Black"/>
            </Frame>

            <Frame x:Name="skillFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6">
                <Button Text="Browse Skill Providers" BackgroundColor="Transparent" Padding="0" Clicked="OnBrowseSkillProvidersClicked" TextColor="Black"/>
            </Frame>

            <Frame x:Name="projectFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6" BackgroundColor="#D0E8FF">
                <Button Text="Browse Projects" BackgroundColor="Transparent" Padding="0" Clicked="OnBrowseProjectsClicked" TextColor="Black"/>
            </Frame>
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <Frame BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                    <Label Text="Browse Projects" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                </Frame>

                <!-- Project Cards -->
                <VerticalStackLayout Spacing="12">

                    <!-- Card 1 -->
                    <Frame BackgroundColor="White" BorderColor="LightGray" CornerRadius="8" Padding="12">
                        <Grid ColumnDefinitions="60,*,80">
                            <BoxView Color="Gray" HeightRequest="50" WidthRequest="50" VerticalOptions="Center" HorizontalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" Padding="10,0">
                                <Label Text="Inventory System Revamp" FontAttributes="Bold" TextColor="Black"/>
                                <Label Text="Location: Cebu City" FontSize="12" TextColor="Black"/>
                                <Label Text="Open Slots: 3" FontSize="12" TextColor="Black"/>
                            </VerticalStackLayout>
                            <Button Text="View" Grid.Column="2" VerticalOptions="Center" Clicked="OnViewProjectClicked"/>
                        </Grid>
                    </Frame>

                    <!-- Card 2 -->
                    <Frame BackgroundColor="White" BorderColor="LightGray" CornerRadius="8" Padding="12">
                        <Grid ColumnDefinitions="60,*,80">
                            <BoxView Color="Gray" HeightRequest="50" WidthRequest="50" VerticalOptions="Center" HorizontalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" Padding="10,0">
                                <Label Text="Website Redesign" FontAttributes="Bold" TextColor="Black"/>
                                <Label Text="Location: Mandaue City" FontSize="12" TextColor="Black"/>
                                <Label Text="Open Slots: 2" FontSize="12" TextColor="Black"/>
                            </VerticalStackLayout>
                            <Button Text="View" Grid.Column="2" VerticalOptions="Center" Clicked="OnViewProjectClicked"/>
                        </Grid>
                    </Frame>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>