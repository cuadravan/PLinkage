<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             x:Class="PLinkage.Views.ProjectOwnerAddProjectView"
             Title="Create Project">

    <Grid ColumnDefinitions="*">
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="20">
                <Button
                  Text="← Back"
                  Command="{Binding CancelCommand}"
                  HorizontalOptions="Start"
                  BackgroundColor="Transparent"
                  TextColor="Black"/>
                <!-- Project Info -->
                <Border Background="#E0E0E0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Padding="10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Project Name" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Entry Placeholder="Enter project name" Text="{Binding ProjectName}" BackgroundColor="White" TextColor="Black"/>

                        <Label Text="Location" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Picker ItemsSource="{Binding CebuLocations}"
                                ItemDisplayBinding="{Binding .}"
                                SelectedItem="{Binding ProjectLocationSelected}" 
                                Title="Select Location"
                                BackgroundColor="White"
                                TextColor="Black"/>

                        <Label Text="Project Description" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Editor Placeholder="Enter project description"
                                Text="{Binding ProjectDescription}"
                                HeightRequest="100"
                                BackgroundColor="White"
                                TextColor="Black"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Dates & Duration Summary -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                    <Border Grid.Column="0" Background="#E0E0E0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Padding="10">
                        <Grid ColumnDefinitions="2*, 1.2*" ColumnSpacing="20">
                            <!-- Date Pickers -->
                            <VerticalStackLayout Spacing="10" Grid.Column="0">
                                <Label Text="Start Date" FontAttributes="Bold" FontSize="14"/>
                                <DatePicker Date="{Binding ProjectStartDate}" BackgroundColor="White"/>

                                <Label Text="End Date" FontAttributes="Bold" FontSize="14"/>
                                <DatePicker Date="{Binding ProjectEndDate}" BackgroundColor="White"/>
                            </VerticalStackLayout>

                            <!-- Duration Display -->
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="10" Padding="10,0,0,0">
                                <Label Text="Duration" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding DurationSummary}"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="Black"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Priority & Status -->
                    <Border Grid.Column="1" Background="#E0E0E0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Padding="10">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Priority" FontAttributes="Bold" FontSize="14"/>
                            <Picker Title="Select Priority"
                                    ItemsSource="{Binding PriorityOptions}"
                                    SelectedItem="{Binding ProjectPrioritySelected}"
                                    BackgroundColor="White"
                                    TextColor="Black" />

                            <Label Text="Status" FontAttributes="Bold" FontSize="14"/>
                            <Picker ItemsSource="{Binding StatusOptions}"
                                    SelectedItem="{Binding ProjectStatusSelected}"
                                    BackgroundColor="White"
                                    TextColor="Black"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Resources, Dates, Skills -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="20">

                    <!-- Left: Resources & Dates -->
                    <VerticalStackLayout Grid.Column="0" Spacing="20">
                        <Border Background="#E0E0E0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="Resources Needed" FontAttributes="Bold" FontSize="14"/>
                                <Entry Text="{Binding ProjectResourcesNeeded}"
                                       Keyboard="Numeric"
                                       BackgroundColor="White"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border Background="#E0E0E0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="Date Created" FontAttributes="Bold" FontSize="14"/>
                                <DatePicker Date="{Binding ProjectDateCreated}" BackgroundColor="White" IsEnabled="False"/>
                                <Label Text="Date Updated" FontAttributes="Bold" FontSize="14"/>
                                <DatePicker Date="{Binding ProjectDateUpdated}" BackgroundColor="White" IsEnabled="False"/>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Right: Skills -->
                    <Border Grid.Column="1" Background="#E0E0E0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Padding="10">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Skill Set" FontAttributes="Bold" FontSize="14"/>
                            <Entry Placeholder="Type a skill..."
                                   Text="{Binding SelectedSkill}"
                                   BackgroundColor="White"/>
                            <Button Text="Add Skill"
                                    Command="{Binding AddSkillCommand}"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"/>

                            <Label Text="Selected Skills:" FontAttributes="Bold" FontSize="14"/>
                            <CollectionView ItemsSource="{Binding ProjectSkillsRequired}"
                                            HeightRequest="150">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,3" Margin="2"
                                                Background="#DDEEFF"
                                                Stroke="LightGray"
                                                StrokeThickness="1"
                                                StrokeShape="RoundRectangle 10">
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="{Binding .}" TextColor="Black"/>
                                                <Button Text="❌"
                                                        FontSize="12"
                                                        BackgroundColor="Transparent"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveSkillCommand}"
                                                        CommandParameter="{Binding .}" />
                                            </HorizontalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
                <!-- Error Message -->
                <Label Text="{Binding ErrorMessage}"
                       TextColor="Red"
                       FontAttributes="Bold"
                       FontSize="14"
                       IsVisible="{Binding HasError}"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>

                <!-- Submit -->
                <Button Text="Create Project"
                        Command="{Binding SubmitCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="6"
                        Padding="12"
                        HorizontalOptions="End"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
