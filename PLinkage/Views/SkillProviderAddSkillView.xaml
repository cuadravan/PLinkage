<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillProviderAddSkillView"
             Title="SkillProviderAddSkillView">
    <Grid ColumnDefinitions="*">

        <!-- MAIN CONTENT -->
        <VerticalStackLayout Grid.Column="0" Padding="40" Spacing="30" VerticalOptions="Center">
            <Frame BackgroundColor="#F0F0F0" Padding="20" CornerRadius="10">
                <VerticalStackLayout Spacing="20">
                    <Entry x:Name="skillNameEntry" Placeholder="Skill Name" BackgroundColor="White" TextColor="Black"/>
                    <Entry x:Name="experienceEntry" Placeholder="Years of Experience" Keyboard="Numeric" BackgroundColor="White" TextColor="Black"/>
                    <Entry x:Name="organizationEntry" Placeholder="Organization" BackgroundColor="White" TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Button Text="Save" BackgroundColor="#A5D6A7" TextColor="Black"  Padding="14,6" CornerRadius="8"/>
                <Button Text="Cancel" BackgroundColor="LightGray" TextColor="Black"  Padding="14,6" CornerRadius="8"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>