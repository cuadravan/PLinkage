<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.LoginPage"
             Title="Sign in"
             BackgroundColor="White">

    <ScrollView>
        <Grid Padding="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Frame BackgroundColor="#2D2D2D"
               CornerRadius="6"
               Padding="24"
               HasShadow="True"
               WidthRequest="350"
               MaximumWidthRequest="400"
               VerticalOptions="Center"
               HorizontalOptions="Center">
                <VerticalStackLayout Spacing="16">

                    <Label Text="Sign in"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White" />

                    <!-- Email Field -->
                    <Entry x:Name="emailEntry"
                       Placeholder="Email Address"
                       Keyboard="Email"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="48" />

                    <!-- Password Field -->
                    <Entry x:Name="passwordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="48" />

                    <!-- Login Button -->
                    <Button Text="Login"
                        BackgroundColor="#0072b1"
                        BorderColor="Blue"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="48"
                        Clicked="OnBtnLoginClicked" />

                    <!-- Register Button -->
                    <Button Text="Register"
                        BackgroundColor="DimGray"
                        TextColor="White"
                        BorderColor="Grey"
                        BorderWidth="1"
                        CornerRadius="8"
                        HeightRequest="48"
                        Clicked="OnBtnRegisterClicked" />

                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>