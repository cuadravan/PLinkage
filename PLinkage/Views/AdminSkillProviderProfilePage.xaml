<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.AdminSkillProviderProfilePage"
             Title="Skill Provider Profile"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">
        <!-- Sidebar -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png"
               HeightRequest="80"
               WidthRequest="80"
               BackgroundColor="Gray"
               HorizontalOptions="Center" />

            <Frame x:Name="homeFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6">
                <Button Text="Home" BackgroundColor="Transparent" Padding="0" Clicked="OnHomeClicked" TextColor="Black"/>
            </Frame>

            <Frame x:Name="skillFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6">
                <Button Text="Browse Skill Providers" BackgroundColor="Transparent" Padding="0" Clicked="OnBrowseSkillProvidersClicked" TextColor="Black"/>
            </Frame>

            <Frame x:Name="projectFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6">
                <Button Text="Browse Projects" BackgroundColor="Transparent" Padding="0" Clicked="OnBrowseProjectsClicked" TextColor="Black"/>
            </Frame>
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Profile Summary -->
                <Frame BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                    <Grid ColumnDefinitions="80,*,Auto">
                        <BoxView Color="Gray" HeightRequest="60" WidthRequest="60" VerticalOptions="Start" HorizontalOptions="Center"/>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Juan Dela Cruz" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                            <Label Text="Rating: ★★★★☆" FontSize="12" TextColor="Black"/>
                            <Label Text="Location: Cebu City" FontSize="12" TextColor="Black"/>
                            <Label Text="Joined on: March 12, 2023" FontSize="12" TextColor="Black"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                            Text="Deactivate"
                            BackgroundColor="#D32F2F"
                            TextColor="White"
                            CornerRadius="6"
                            Padding="10,5"
                            Clicked="OnDeactivateClicked" />
                    </Grid>
                </Frame>

                <!-- Contact Info -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Information" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Label Text="Gender: Male" FontSize="12" TextColor="Black"/>
                        <Label Text="Email: juandelacruz@email.com" FontSize="12" TextColor="Black"/>
                        <Label Text="Mobile: 09123456789" FontSize="12" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Education -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Education" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Frame BackgroundColor="White" CornerRadius="4" Padding="10" HasShadow="False">
                            <VerticalStackLayout>
                                <Label Text="School: University of Cebu" FontSize="12" TextColor="Black"/>
                                <Label Text="Course: BS Information Technology" FontSize="12" TextColor="Black"/>
                                <Label Text="Year Graduated: 2022" FontSize="12" TextColor="Black"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Skills -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Skills" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Frame BackgroundColor="White" CornerRadius="4" Padding="10" HasShadow="False">
                            <VerticalStackLayout>
                                <Label Text="Skill: Web Development" FontSize="12" TextColor="Black"/>
                                <Label Text="Organization: Freelance" FontSize="12" TextColor="Black"/>
                                <Label Text="Experience: 3 years" FontSize="12" TextColor="Black"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Projects -->
                <Frame BackgroundColor="#E0E0E0" CornerRadius="8" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Projects" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Label Text="• Mobile App Redesign (Lead UI)" FontSize="12" TextColor="Black"/>
                        <Label Text="• Inventory System Migration (Backend Dev)" FontSize="12" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>