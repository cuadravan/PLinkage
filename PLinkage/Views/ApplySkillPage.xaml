<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.ApplySkillPage"
             Title="Apply"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">
        <!-- SIDEBAR -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png"
               HeightRequest="80"
               WidthRequest="80"
               BackgroundColor="Gray"
               HorizontalOptions="Center" />

            <Button Text="Home" BackgroundColor="White" TextColor="Black" Clicked="OnHomeClicked"/>
            <Button Text="Profile" BackgroundColor="White" TextColor="Black" Clicked="OnProfileClicked"/>
            <Button Text="Browse Projects" BackgroundColor="White" TextColor="Black" Clicked="OnBrowseClicked"/>
            <Button Text="Applications and Offers" BackgroundColor="White" TextColor="Black" Clicked="OnApplicationsClicked"/>
            <Button Text="Messages" BackgroundColor="White" TextColor="Black" Clicked="OnMessagesClicked"/>
        </StackLayout>

        <!-- MAIN CONTENT -->
        <VerticalStackLayout Grid.Column="1" Padding="40" Spacing="20" VerticalOptions="Center">
            <Frame BackgroundColor="#F0F0F0" Padding="20" CornerRadius="10">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Select Project:" TextColor="Black"/>
                    <Picker x:Name="projectPicker" Title="Choose Project" BackgroundColor="White" TextColor="Black" />

                    <Label Text="Select Skill Provider:" TextColor="Black"/>
                    <Picker x:Name="providerPicker" Title="Choose Provider" BackgroundColor="White" TextColor="Black" />

                    <Label Text="Rate (â‚±):" TextColor="Black"/>
                    <Entry x:Name="rateEntry" Placeholder="Enter your rate" Keyboard="Numeric" BackgroundColor="White" TextColor="Black"/>

                    <Label Text="Timeframe (Days/Weeks/Months):" TextColor="Black"/>
                    <Entry x:Name="timeframeEntry" Placeholder="e.g. 2 Weeks" BackgroundColor="White" TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Send" BackgroundColor="#A5D6A7" TextColor="Black" Clicked="OnSendClicked" Padding="12,6" CornerRadius="8" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>