<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillApplicationsAndOffersPage"
             Title="Applications and Offers"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">
        <!-- SIDEBAR -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png" HeightRequest="80" WidthRequest="80"
               BackgroundColor="Gray" HorizontalOptions="Center" />

            <Button x:Name="homeBtn" Text="Home" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnHomeClicked" />

            <Button x:Name="profileBtn" Text="Profile" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnProfileClicked" />

            <Button x:Name="browseBtn" Text="Browse Projects" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnBrowseClicked" />

            <Button x:Name="appsBtn" Text="Applications and Offers" Padding="12" CornerRadius="6"
                BackgroundColor="#D0E8FF" TextColor="Black" Clicked="OnApplicationsClicked" />

            <Button x:Name="messagesBtn" Text="Messages" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnMessagesClicked" />
        </StackLayout>

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="15">

                <!-- Table Header -->
                <Grid ColumnDefinitions="*,*,*" Padding="10">
                    <Label Text="Project Name" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                    <Label Text="Skill Provider" FontAttributes="Bold" FontSize="14" TextColor="Black" Grid.Column="1" HorizontalOptions="Center" Margin="0,0,70,0" />
                    <Label Text="Action" FontAttributes="Bold" FontSize="14" TextColor="Black" Grid.Column="2" HorizontalOptions="End" Margin="0,0,60,0" />
                </Grid>

                <!-- Application Entries -->
                <!-- Repeating Frame Template -->
                <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="12" Padding="14">
                    <Grid ColumnDefinitions="*,*,auto" VerticalOptions="Center">
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Project 1" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Rate: ₱15,000" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Cristal Tabotabo" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Timeframe: 2 weeks" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <HorizontalStackLayout Grid.Column="2" Spacing="10" HorizontalOptions="End" VerticalOptions="Center">
                            <Button Text="✓ Accept" BackgroundColor="#C8E6C9" TextColor="Black" CornerRadius="12" Padding="10,4" />
                            <Button Text="✕ Reject" BackgroundColor="#FFCDD2" TextColor="Black" CornerRadius="12" Padding="10,4" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="12" Padding="14">
                    <Grid ColumnDefinitions="*,*,auto" VerticalOptions="Center">
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Project 2" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Rate: ₱25,000" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Van Cuadra" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Timeframe: 1 month" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <HorizontalStackLayout Grid.Column="2" Spacing="10" HorizontalOptions="End" VerticalOptions="Center">
                            <Button Text="✓ Accept" BackgroundColor="#C8E6C9" TextColor="Black" CornerRadius="12" Padding="10,4" />
                            <Button Text="✕ Reject" BackgroundColor="#FFCDD2" TextColor="Black" CornerRadius="12" Padding="10,4" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="12" Padding="14">
                    <Grid ColumnDefinitions="*,*,auto" VerticalOptions="Center">
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Project 2" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Rate: ₱25,000" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Van Cuadra" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Timeframe: 1 month" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <HorizontalStackLayout Grid.Column="2" Spacing="10" HorizontalOptions="End" VerticalOptions="Center">
                            <Button Text="✓ Accept" BackgroundColor="#C8E6C9" TextColor="Black" CornerRadius="12" Padding="10,4" />
                            <Button Text="✕ Reject" BackgroundColor="#FFCDD2" TextColor="Black" CornerRadius="12" Padding="10,4" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="12" Padding="14">
                    <Grid ColumnDefinitions="*,*,auto" VerticalOptions="Center">
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Project 2" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Rate: ₱25,000" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Van Cuadra" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Timeframe: 1 month" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <HorizontalStackLayout Grid.Column="2" Spacing="10" HorizontalOptions="End" VerticalOptions="Center">
                            <Button Text="✓ Accept" BackgroundColor="#C8E6C9" TextColor="Black" CornerRadius="12" Padding="10,4" />
                            <Button Text="✕ Reject" BackgroundColor="#FFCDD2" TextColor="Black" CornerRadius="12" Padding="10,4" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" BorderColor="#D9D9D9" CornerRadius="12" Padding="14">
                    <Grid ColumnDefinitions="*,*,auto" VerticalOptions="Center">
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Project 1" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Rate: ₱15,000" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Cristal Tabotabo" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Timeframe: 2 weeks" FontSize="12" TextColor="Black" />
                        </VerticalStackLayout>
                        <HorizontalStackLayout Grid.Column="2" Spacing="10" HorizontalOptions="End" VerticalOptions="Center">
                            <Button Text="✓ Accept" BackgroundColor="#C8E6C9" TextColor="Black" CornerRadius="12" Padding="10,4" />
                            <Button Text="✕ Reject" BackgroundColor="#FFCDD2" TextColor="Black" CornerRadius="12" Padding="10,4" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>