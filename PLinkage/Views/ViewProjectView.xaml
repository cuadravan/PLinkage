<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.ViewProjectView"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
            xmlns:models="clr-namespace:PLinkage.Models"
             Title="View Project">

    <Grid ColumnDefinitions="*">

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Project Info -->
                <Border Background="#E0E0E0" Padding="10" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                    <VerticalStackLayout Spacing="10">
                        <Label TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Project Name: " FontAttributes="Bold"/>
                                    <Span Text="{Binding ProjectName}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label TextColor="Blue">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Project Owner: " FontAttributes="Bold" TextColor="Black"/>
                                    <Span Text="{Binding ProjectOwnerFullName}" TextColor="Blue" TextDecorations="Underline"/>
                                </FormattedString>
                            </Label.FormattedText>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ViewProjectOwnerCommand}" />
                            </Label.GestureRecognizers>
                        </Label>


                        <Label TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Location: " FontAttributes="Bold"/>
                                    <Span Text="{Binding ProjectLocation}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Text="{Binding ProjectDescription}" HeightRequest="100" BackgroundColor="White" TextColor="black"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Start/End Date + Priority/Status + Resources -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">

                    <!-- Start & End Dates -->
                    <Border Grid.Column="0" Background="#E0E0E0" Padding="10" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Start Date" FontAttributes="Bold" TextColor="black"/>
                            <Border Padding="0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Background="White">
                                <DatePicker Date="{Binding ProjectStartDate}" TextColor="black" IsEnabled="False"/>
                            </Border>
                            <Label Text="End Date" FontAttributes="Bold" TextColor="black"/>
                            <Border Padding="0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Background="White">
                                <DatePicker Date="{Binding ProjectEndDate}" TextColor="black" IsEnabled="False"/>
                            </Border>
                            

                        </VerticalStackLayout>
                    </Border>

                    <!-- Priority & Status -->
                    <Border Grid.Column="1" Background="#E0E0E0" Padding="10" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Priority" FontAttributes="Bold" TextColor="black"/>
                            <Label Text="{Binding ProjectPriority}" BackgroundColor="White" TextColor="#444"/>
                            <Label Text="Status" FontAttributes="Bold" TextColor="black"/>
                            <Label Text="{Binding CurrentProjectStatus}" BackgroundColor="White" TextColor="#444"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Number of Resources -->
                    <Border Grid.Column="2" Background="#E0E0E0" Padding="10" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Number of Resources" FontAttributes="Bold" TextColor="black"/>
                            <Label Text="{Binding ProjectResourcesNeeded}" BackgroundColor="White" TextColor="black"/>
                            <Label Text="Project Duration" FontAttributes="Bold" TextColor="black"/>
                            <Label Text="{Binding DurationSummary}" BackgroundColor="White" TextColor="black"/>
                            <!-- Project Created/Updated Dates -->

                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Employed Skill Providers & Required Skills -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">

                    <!-- Employed Skill Providers -->
                    <Border Grid.Column="0" Background="#E0E0E0" Padding="10" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Employed Skill Providers" FontAttributes="Bold" FontSize="14" TextColor="Black" />

                            <CollectionView ItemsSource="{Binding EmployedSkillProviders}" HeightRequest="200">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,3" Margin="2" Background="#DDEEFF" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                                            <VerticalStackLayout Spacing="4">
                                                <Label TextColor="Black" FontAttributes="Bold">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Name: " FontAttributes="Bold"/>
                                                            <Span Text="{Binding FullName}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>

                                                <Label TextColor="Gray" FontSize="12">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Email address: " FontAttributes="Bold"/>
                                                            <Span Text="{Binding Email}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>

                                                <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                                    <Label TextColor="Black" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ViewProjectViewModel}}, Path=IsOwner}">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="Rate: " FontAttributes="Bold"/>
                                                                <Span Text="{Binding Rate, StringFormat='â‚±{0:N2} per hour'}"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>

                                                    <Label TextColor="Black" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ViewProjectViewModel}}, Path=IsOwner}">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="Timeframe: " FontAttributes="Bold"/>
                                                                <Span Text="{Binding TimeFrame, StringFormat='{}{0} hours'}"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>

                                                    <Button Text="View"
            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ViewProjectViewModel}}, Path=ViewSkillProviderCommand}"
            CommandParameter="{Binding .}"
            BackgroundColor="#D0E8FF"
            Padding="10,4"
            CornerRadius="6"
            VerticalOptions="Center"
            TextColor="Black"/>
                                                </HorizontalStackLayout>

                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Required Skills -->
                    <Border Grid.Column="1" Background="#E0E0E0" Padding="10" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Required Skill Set" FontAttributes="Bold" FontSize="14" TextColor="Black" />

                            <CollectionView ItemsSource="{Binding ProjectSkillsRequired}" HeightRequest="150">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,3" Margin="2" Background="#DDEEFF" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding .}" TextColor="Black"/>
                                            </HorizontalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="2" Background="#E0E0E0" Padding="10" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Date Created" FontAttributes="Bold" TextColor="black"/>
                            <Border Padding="0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Background="White">
                                <DatePicker Date="{Binding ProjectDateCreated}" TextColor="black" IsEnabled="False"/>
                            </Border>

                            <Label Text="Date Updated" FontAttributes="Bold" TextColor="black"/>
                            <Border Padding="0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Background="White">
                                <DatePicker Date="{Binding ProjectDateUpdated}" TextColor="black" IsEnabled="False"/>
                            </Border>
                        </VerticalStackLayout>
                    </Border>
                </Grid>


                <!-- Buttons -->
                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,20,0,0">
                    <Button Text="Apply"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="8"
                            Padding="12,6"
                            IsVisible="{Binding IsSkillProvider}"
                            Command="{Binding ApplyCommand}" />

                    <Button Text="Back"
                            BackgroundColor="#757575"
                            TextColor="White"
                            CornerRadius="8"
                            Padding="12,6"
                            Command="{Binding BackCommand}"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
