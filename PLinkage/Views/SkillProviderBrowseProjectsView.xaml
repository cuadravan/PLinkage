<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillProviderBrowseProjectsView"
             Title="Browse Projects"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             xmlns:local="clr-namespace:PLinkage.Converters"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SortToVisibilityConverter x:Key="SortToVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView Padding="50">
        <VerticalStackLayout Spacing="16">

            <!-- Header -->
            <Border BackgroundColor="#7C4DFF" StrokeThickness="0"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Browse Available Projects"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White" />
                    <Label Text="Find projects in your area that match your skills and interests."
                               FontSize="14"
                               TextColor="White"/>
                
                    <Picker Title="Sort By"
                            TitleColor="White"
                                TextColor="White"
                                ItemsSource="{Binding SortOptions}"
                                SelectedItem="{Binding SortSelection}" />

                    <Picker Title="Select Location"
                            TitleColor="White"
                                TextColor="White"
                                ItemsSource="{Binding CebuLocations}"
                                SelectedItem="{Binding SelectedLocation}"
                                IsVisible="{Binding SortSelection, Converter={StaticResource SortToVisibilityConverter}}" />
                </VerticalStackLayout>
            </Border>

            <!-- Project List -->
            <FlexLayout BindableLayout.ItemsSource="{Binding SuggestedProjects}" Wrap="Wrap" Direction="Row" AlignItems="Start" JustifyContent="Center" AlignContent="Center" Padding="10">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="#FFFFFF" 
StrokeThickness="1" 
Stroke="#7C4DFF"
Padding="12" 
StrokeShape="RoundRectangle 10"
HeightRequest="120" WidthRequest="340" 
Margin="0,0,10,10">
                            <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">
                                <BoxView Color="#7C4DFF" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding ProjectName}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectResourcesAvailable, StringFormat='{0} available slot/s'}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectLocation}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                </VerticalStackLayout>

                                <Button Text="View"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BrowseProjectViewModel}}, Path=ViewProjectCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="2"
                                            BackgroundColor="#7C4DFF"
TextColor="White"
                                            Padding="10,4"
                                            WidthRequest="100"
                                            CornerRadius="6"
                                            VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
