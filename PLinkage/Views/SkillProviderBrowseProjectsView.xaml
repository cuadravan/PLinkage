<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillProviderBrowseProjectsView"
             Title="Browse Projects"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             xmlns:local="clr-namespace:PLinkage.Converters">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SortToVisibilityConverter x:Key="SortToVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*">
        <ScrollView Grid.Column="0" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Browse Available Projects"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label Text="Discover projects in your area that match your skills and interests."
                               FontSize="14"
                               TextColor="Black"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Sorting Controls -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Sort Projects"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <Picker Title="Sort By"
                                ItemsSource="{Binding SortOptions}"
                                SelectedItem="{Binding SortSelection}" />

                        <Picker Title="Select Location"
                                ItemsSource="{Binding CebuLocations}"
                                SelectedItem="{Binding SelectedLocation}"
                                IsVisible="{Binding SortSelection, Converter={StaticResource SortToVisibilityConverter}}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Project List -->
                <CollectionView ItemsSource="{Binding SuggestedProjects}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#F9F9F9" StrokeThickness="1" Stroke="LightGray"
                                    Padding="12" StrokeShape="RoundRectangle 10">
                                <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">
                                    <BoxView Color="Gray" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                        <Label Text="{Binding ProjectName}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               TextColor="Black"/>
                                        <Label Text="{Binding ProjectResourcesAvailable, StringFormat='{0} available slot/s'}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                        <Label Text="{Binding ProjectLocation}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                    </VerticalStackLayout>

                                    <Button Text="View"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BrowseProjectViewModel}}, Path=ViewProjectCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="2"
                                            BackgroundColor="#1976D2"
                                            Padding="10,4"
                                            WidthRequest="100"
                                            CornerRadius="6"
                                            VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
