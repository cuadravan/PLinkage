<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.SkillMessagesPage"
             Title="Messages"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">
        <!-- SIDEBAR -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png" HeightRequest="80" WidthRequest="80"
               BackgroundColor="Gray" HorizontalOptions="Center" />

            <Button x:Name="homeBtn" Text="Home" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnHomeClicked" />

            <Button x:Name="profileBtn" Text="Profile" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnProfileClicked" />

            <Button x:Name="browseBtn" Text="Browse Skill Providers" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnBrowseClicked" />

            <Button x:Name="appsBtn" Text="Applications and Offers" Padding="12" CornerRadius="6"
                BackgroundColor="White" TextColor="Black" Clicked="OnApplicationsClicked" />

            <Button x:Name="messagesBtn" Text="Messages" Padding="12" CornerRadius="6"
                BackgroundColor="#D0E8FF" TextColor="Black" Clicked="OnMessagesClicked" />
        </StackLayout>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <!-- Header -->
            <Frame BackgroundColor="#D9D9D9" Padding="16" HasShadow="False">
                <Label Text="Messages" FontSize="20" FontAttributes="Bold" TextColor="Black" />
            </Frame>

            <!-- Chat Content -->
            <Grid Grid.Row="1" ColumnDefinitions="2*,3*" Padding="10">
                <!-- Conversation List -->
                <ScrollView>
                    <VerticalStackLayout Spacing="10">
                        <Frame Padding="10" BackgroundColor="#EEEEEE" CornerRadius="6">
                            <HorizontalStackLayout Spacing="10">
                                <BoxView Color="Gray" HeightRequest="40" WidthRequest="40" CornerRadius="4"/>
                                <Label Text="Cristal Tabotabo" VerticalOptions="Center" TextColor="Black" />
                            </HorizontalStackLayout>
                        </Frame>
                        <Frame Padding="10" BackgroundColor="#EEEEEE" CornerRadius="6">
                            <HorizontalStackLayout Spacing="10">
                                <BoxView Color="Gray" HeightRequest="40" WidthRequest="40" CornerRadius="4"/>
                                <Label Text="Van Cuadra" VerticalOptions="Center" TextColor="Black" />
                            </HorizontalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Chat Panel -->
                <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto" Padding="10">
                    <!-- Chat Header -->
                    <Frame BackgroundColor="#EEEEEE" Padding="10">
                        <Label Text="Cristal Tabotabo" FontAttributes="Bold" TextColor="Black"/>
                    </Frame>

                    <!-- Message List -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="10" Padding="0,10">
                            <Frame Padding="10" BackgroundColor="#FFFFFF" CornerRadius="6" BorderColor="LightGray">
                                <Label Text="Hello, Iâ€™m interested in your project!" TextColor="Black" />
                            </Frame>
                            <Frame Padding="10" BackgroundColor="#FFFFFF" CornerRadius="6" BorderColor="LightGray">
                                <Label Text="Sure! Let's discuss the timeline." TextColor="Black" />
                            </Frame>
                        </VerticalStackLayout>
                    </ScrollView>

                    <!-- Chat Input -->
                    <Frame Grid.Row="2" Padding="8" BorderColor="LightGray" CornerRadius="6">
                        <Entry Placeholder="Type a message..." FontSize="14" TextColor="White" />
                    </Frame>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>