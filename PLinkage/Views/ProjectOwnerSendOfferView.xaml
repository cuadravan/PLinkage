<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.ProjectOwnerSendOfferView"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             Title="Send Offer"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <Border Background="#F1F0FC" Stroke="LightGray" VerticalOptions="Center" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="30" WidthRequest="400">
            <VerticalStackLayout Spacing="20">
                <Label Text="Please complete form to send offer:" FontAttributes="Bold" TextColor="Black" FontSize="18" HorizontalTextAlignment="Center"/>
                <Label Text="Select Project:" FontAttributes="Bold" TextColor="Black"/>
                <Picker
                            ItemsSource="{Binding OwnedProjects}"
                            ItemDisplayBinding="{Binding ProjectName}"
                            SelectedItem="{Binding SelectedProject}"
                            BackgroundColor="White" TextColor="Black" TitleColor="#555555"/>

                <Label Text="Skill Provider:" FontAttributes="Bold" TextColor="Black"/>
                <Label Text="{Binding SkillProviderFullName}" BackgroundColor="White"
                           TextColor="Black" Padding="10,10" />

                <Label Text="Rate per hour (â‚±):" FontAttributes="Bold" TextColor="Black"/>
                <Entry Placeholder="e.g., 500"
                           Text="{Binding RateOffered}"
                           Keyboard="Numeric"
                           BackgroundColor="White" TextColor="Black"/>

                <Label Text="Estimated Timeframe (in hours):" FontAttributes="Bold" TextColor="Black"/>
                <Entry Placeholder="e.g., 2"
                           Text="{Binding TimeFrameOffered}"
                           BackgroundColor="White" TextColor="Black"/>

                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="Send Offer"
                                Command="{Binding SendOfferCommand}"
                                
                                BackgroundColor="#7C4DFF"
                                TextColor="White"
                                WidthRequest="120" />

                    <Button Text="Cancel"
                                Command="{Binding GoBackCommand}"                             
                                BackgroundColor="White"
                                TextColor="#7C4DFF"
                                WidthRequest="120" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
    </ScrollView>
</ContentPage>
