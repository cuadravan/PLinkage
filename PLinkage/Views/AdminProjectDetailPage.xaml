<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.AdminProjectDetailPage"
             Title="Project Details"
             BackgroundColor="White">

    <Grid ColumnDefinitions="240,*">
        <!-- Sidebar -->
        <StackLayout BackgroundColor="#F0F0F0" Padding="20" Spacing="20">
            <Image Source="logo_placeholder.png"
               HeightRequest="80"
               WidthRequest="80"
               BackgroundColor="Gray"
               HorizontalOptions="Center" />

            <Frame x:Name="homeFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6">
                <Button Text="Home" BackgroundColor="Transparent" Padding="0" Clicked="OnHomeClicked" TextColor="Black"/>
            </Frame>

            <Frame x:Name="skillFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6">
                <Button Text="Browse Skill Providers" BackgroundColor="Transparent" Padding="0" Clicked="OnBrowseSkillProvidersClicked" TextColor="Black"/>
            </Frame>

            <Frame x:Name="projectFrame" Padding="8" HasShadow="True" BorderColor="LightGray" CornerRadius="6" BackgroundColor="#D0E8FF">
                <Button Text="Browse Projects" BackgroundColor="Transparent" Padding="0" Clicked="OnBrowseProjectsClicked" TextColor="Black"/>
            </Frame>
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <Frame BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Project: Inventory System Revamp" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                        <Label Text="Location: Cebu City" FontSize="12" TextColor="Black"/>
                        <Label Text="Owner: Jane Villanueva"
                           FontSize="12"
                           TextColor="Blue"
                           TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnOwnerTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="This project involves revamping an outdated inventory management system to include barcode scanning, live dashboards, and accounting tool integrations."
                           FontSize="12" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Grid Sections -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">

                    <!-- Start and End Dates -->
                    <Frame Grid.Column="0" BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="Start Date:" FontSize="12" TextColor="Black"/>
                            <Entry Placeholder="e.g. Jan 1, 2024" FontSize="12"/>
                            <Label Text="End Date:" FontSize="12" Margin="0,10,0,0" TextColor="Black"/>
                            <Entry Placeholder="e.g. Apr 30, 2024" FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Priority & Status -->
                    <Frame Grid.Column="1" BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                        <VerticalStackLayout Spacing="12">
                            <!-- Priority Picker -->
                            <Label Text="Priority:" FontSize="12" TextColor="Black"/>
                            <Frame BackgroundColor="White" CornerRadius="6" BorderColor="LightGray" Padding="4">
                                <Picker Title="Select Priority"
                                    TextColor="Black"
                                    FontSize="12"
                                    BackgroundColor="White">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Low</x:String>
                                            <x:String>Medium</x:String>
                                            <x:String>High</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>

                            <!-- Status Picker -->
                            <Label Text="Status:" FontSize="12" TextColor="Black"/>
                            <Frame BackgroundColor="White" CornerRadius="6" BorderColor="LightGray" Padding="4">
                                <Picker Title="Select Status"
                                    TextColor="Black"
                                    FontSize="12"
                                    BackgroundColor="White">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Ongoing</x:String>
                                            <x:String>Completed</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Number of Resources & Skills -->
                    <Frame Grid.Column="2" BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="Number of Resources:" FontSize="12" TextColor="Black"/>
                            <Entry Placeholder="e.g. 5" Keyboard="Numeric" FontSize="12"/>

                            <Label Text="Required Skills:" FontAttributes="Bold" FontSize="14" Margin="0,12,0,0" TextColor="Black"/>
                            <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Start" Margin="0,4,0,0">
                                <Frame BackgroundColor="#C5CAE9" CornerRadius="12" Padding="8,4" Margin="4" HasShadow="False">
                                    <Label Text="C#" FontSize="12" TextColor="Black"/>
                                </Frame>
                                <Frame BackgroundColor="#C5CAE9" CornerRadius="12" Padding="8,4" Margin="4" HasShadow="False">
                                    <Label Text="SQL" FontSize="12" TextColor="Black"/>
                                </Frame>
                                <Frame BackgroundColor="#C5CAE9" CornerRadius="12" Padding="8,4" Margin="4" HasShadow="False">
                                    <Label Text="Xamarin" FontSize="12" TextColor="Black"/>
                                </Frame>
                                <Frame BackgroundColor="#C5CAE9" CornerRadius="12" Padding="8,4" Margin="4" HasShadow="False">
                                    <Label Text="UI/UX" FontSize="12" TextColor="Black"/>
                                </Frame>
                            </FlexLayout>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Employed Skill Providers -->
                <Frame BackgroundColor="#E0E0E0" Padding="16" CornerRadius="8">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Employed Skill Providers" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                        <Frame BackgroundColor="White" Padding="10" CornerRadius="6" BorderColor="LightGray">
                            <Label Text="Juan Dela Cruz - Frontend Dev" FontSize="12" TextColor="Black"/>
                        </Frame>
                        <Frame BackgroundColor="White" Padding="10" CornerRadius="6" BorderColor="LightGray">
                            <Label Text="Maria Lopez - Backend Dev" FontSize="12" TextColor="Black"/>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>