<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.AdminBrowseProjectOwnerView"
             Title="Browse Project Owners"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             xmlns:local="clr-namespace:PLinkage.Converters"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SortToVisibilityConverter x:Key="SortToVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*">
        <ScrollView Grid.Column="0" Padding="50">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <Border BackgroundColor="#7C4DFF" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="All Project Owners (Admin View)"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <Label Text="Manage and monitor all project owners, including deactivated ones."
                               FontSize="14"
                               TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <!-- Sorting Controls -->
                <Border BackgroundColor="White" StrokeThickness="1" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="6">

                        <Label Text="Filter by Category"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <Picker Title="Select Category"
                                ItemsSource="{Binding CategorySortOptions}"
                                SelectedItem="{Binding CategorySortSelection}" />

                        <Picker Title="Select Location"
                                ItemsSource="{Binding CebuLocations}"
                                SelectedItem="{Binding SelectedLocation}"
                                IsVisible="{Binding CategorySortSelection, Converter={StaticResource SortToVisibilityConverter}}" />

                        <Label Text="Filter by User Status"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,12,0,0" />

                        <Picker Title="Select Status"
                                ItemsSource="{Binding StatusSortOptions}"
                                SelectedItem="{Binding StatusSortSelection}" />

                    </VerticalStackLayout>
                </Border>

                <!-- Skill Provider List -->
                <FlexLayout BindableLayout.ItemsSource="{Binding FilteredProjectOwners}"
Wrap="Wrap"
Direction="Row"
AlignItems="Start"
JustifyContent="Center"
AlignContent="Center">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#FFFFFF" 
StrokeThickness="1" 
Stroke="#7C4DFF"
Padding="12" 
StrokeShape="RoundRectangle 10"
HeightRequest="120" WidthRequest="340" 
Margin="0,0,10,10">
                                <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">

                                    <!-- Placeholder BoxView for profile photo -->
                                    <BoxView Color="#7C4DFF" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                        <Label Text="{Binding UserFirstName}" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                        <Label Text="{Binding UserLastName}" FontSize="14" TextColor="Black"/>
                                        <Label Text="{Binding UserLocation}" FontSize="12" TextColor="Black"/>
                                        <Label Text="{Binding UserStatus}" FontSize="12" TextColor="Black"/>
                                    </VerticalStackLayout>

                                    <Button Text="View"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminBrowseProjectOwnerViewModel}}, Path=ViewProjectOwnerCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="2"
                                            Padding="10,4"
                                            CornerRadius="6"
                                            VerticalOptions="Center"
                                            BackgroundColor="#7C4DFF"
                                            WidthRequest="100"       />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
