<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
    x:Class="PLinkage.Views.ProjectOwnerUpdateProfileView"
    x:DataType="viewmodels:UpdateProfileViewModel"
    Title="Update Profile">

    <Grid ColumnDefinitions="*">
        <VerticalStackLayout Grid.Column="0" Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="#D9D9D9" Padding="12" HasShadow="False">
                <Label Text="Update Profile" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            </Frame>

            <!-- Form Grid -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="15" ColumnSpacing="20">

                <!-- First Name -->
                <Frame BorderColor="LightGray" CornerRadius="6" Padding="5" Grid.Row="0" Grid.Column="0" BackgroundColor="Transparent">
                    <Entry Placeholder="First Name" Text="{Binding FirstName}" BackgroundColor="White" TextColor="Black" />
                </Frame>

                <!-- Last Name -->
                <Frame BorderColor="LightGray" CornerRadius="6" Padding="5" Grid.Row="1" Grid.Column="0" BackgroundColor="Transparent">
                    <Entry Placeholder="Last Name" Text="{Binding LastName}" BackgroundColor="White" TextColor="Black" />
                </Frame>

                <!-- Gender RadioButtons -->
                <Frame BorderColor="LightGray" CornerRadius="6" Padding="5" Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Gender:" VerticalOptions="Center"/>
                        <RadioButton Content="Male" IsChecked="{Binding IsMale}" GroupName="Gender"/>
                        <RadioButton Content="Female" IsChecked="{Binding IsFemale}" GroupName="Gender"/>
                    </HorizontalStackLayout>
                </Frame>

                <!-- Location Picker -->
                <Frame BorderColor="LightGray" CornerRadius="6" Padding="5" Grid.Row="1" Grid.Column="1" BackgroundColor="Transparent">
                    <Picker ItemsSource="{Binding CebuLocations}"
                            ItemDisplayBinding="{Binding .}"
                            SelectedItem="{Binding SelectedLocation}" 
                            Title="Select Location"
                            BackgroundColor="White"
                            TextColor="Black"/>
                </Frame>

                <!-- Birthdate -->
                <Frame BorderColor="LightGray" CornerRadius="6" Padding="5" Grid.Row="2" Grid.Column="0" BackgroundColor="Transparent">
                    <DatePicker Date="{Binding Birthdate}" TextColor="Black" BackgroundColor="White" />
                </Frame>

                <!-- Mobile Number -->
                <Frame BorderColor="LightGray" CornerRadius="6" Padding="5" Grid.Row="2" Grid.Column="1" BackgroundColor="Transparent">
                    <Entry Placeholder="Mobile Number" Text="{Binding MobileNumber}" Keyboard="Telephone" BackgroundColor="White" TextColor="Black" />
                </Frame>

                <!-- Error Message -->
                <Label Grid.Row="3" Grid.ColumnSpan="2" Text="{Binding ErrorMessage}" TextColor="Red" FontAttributes="Italic"/>
            </Grid>

            <!-- Upload Button -->
            <Button Text="Upload Profile Photo"
                    HorizontalOptions="Center"
                    BackgroundColor="#DDDDDD"
                    TextColor="Black"
                    CornerRadius="6"
                    Padding="10,5"/>

            <!-- Action Buttons -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Reset"
                        Command="{Binding ClearCommand}"
                        BackgroundColor="White"
                        BorderColor="LightGray"
                        TextColor="Black"
                        CornerRadius="6"
                        Padding="10,5"/>

                <Button Text="Apply Changes"
                        Command="{Binding UpdateCommand}"
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        CornerRadius="6"
                        Padding="10,5"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
