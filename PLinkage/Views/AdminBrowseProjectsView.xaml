<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLinkage.Views.AdminBrowseProjectsView"
             Title="Browse Projects"
             xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
             xmlns:models="clr-namespace:PLinkage.Models"
             xmlns:local="clr-namespace:PLinkage.Converters"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SortToVisibilityConverter x:Key="SortToVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView Padding="50">
        <VerticalStackLayout Spacing="16">

            <!-- Header -->
            <Border BackgroundColor="#7C4DFF" StrokeThickness="0" Stroke="#CCCCCC"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="All Projects (Admin View)"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White" />
                    <Label Text="Manage and monitor all projects, including deactivated ones."
                               FontSize="14"
                               TextColor="White"/>
                </VerticalStackLayout>
            </Border>

            <!-- Sorting Controls -->
            <Border BackgroundColor="White" StrokeThickness="1" Stroke="#7C4DFF"
                        Padding="16" StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Filter Projects"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />

                    <Picker Title="Sort By"
                                ItemsSource="{Binding SortOptions}"
                                SelectedItem="{Binding SortSelection}" />

                    <Picker Title="Select Location"
                                ItemsSource="{Binding CebuLocations}"
                                SelectedItem="{Binding SelectedLocation}"
                                IsVisible="{Binding SortSelection, Converter={StaticResource SortToVisibilityConverter}}" />
                </VerticalStackLayout>
            </Border>

            <!-- Project List -->
            <FlexLayout BindableLayout.ItemsSource="{Binding AllProjects}"
Wrap="Wrap"
Direction="Row"
AlignItems="Start"
JustifyContent="Center"
AlignContent="Center">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White" StrokeThickness="1" Stroke="#7C4DFF"
Padding="12" StrokeShape="RoundRectangle 10" Margin="0,0,10,10" HeightRequest="120" WidthRequest="340">
                            <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10">
                                <BoxView Color="#7C4DFF" HeightRequest="60" WidthRequest="60"
                                             VerticalOptions="Center" HorizontalOptions="Center"/>

                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding ProjectName}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectStatus}"
                                               FontSize="12"
                                               TextColor="Gray"/>
                                    <Label Text="{Binding ProjectResourcesAvailable, StringFormat='{0} available slot/s'}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                    <Label Text="{Binding ProjectLocation}"
                                               FontSize="12"
                                               TextColor="Black"/>
                                </VerticalStackLayout>

                                <Button Text="View"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminBrowseProjectsViewModel}}, Path=ViewProjectCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="2"
                                            BackgroundColor="#7C4DFF"
                                            WidthRequest="100"       
                                            Padding="10,4"
                                            CornerRadius="6"
                                            VerticalOptions="Center"
                                            />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
