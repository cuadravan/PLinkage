<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="PLinkageApp.WindowsControls.LabeledPicker"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">

    <VerticalStackLayout>
        <Label
            FontAttributes="Bold"
            FontFamily="Roboto Mono"
            FontSize="20"
            Text="{Binding Source={x:Reference ThisControl}, Path=TitleText}"
            TextColor="Black" />

        <Picker
            Title="{Binding Source={x:Reference ThisControl}, Path=PlaceholderText}"
            FontFamily="Roboto Mono"
            FontSize="16"
            ItemsSource="{Binding Source={x:Reference ThisControl}, Path=ItemSource}"
            SelectedItem="{Binding Source={x:Reference ThisControl}, Path=SelectedItem}"
            TextColor="#212121" />
    </VerticalStackLayout>
</ContentView>