<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.Controls.StatCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Border
        Padding="20"
        BackgroundColor="#7C4DFF"
        HeightRequest="200"
        Stroke="#7C4DFF"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="0"
        WidthRequest="250">
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="12"
            VerticalOptions="Center">

            <!-- Title -->
            <Label
                x:Name="TitleLabel"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalTextAlignment="Center"
                LineBreakMode="WordWrap"
                MaxLines="2"
                TextColor="White" />

            <!-- Value -->
            <Label
                x:Name="ValueLabel"
                FontAttributes="Bold"
                FontSize="72"
                HorizontalTextAlignment="Center"
                TextColor="White" />

        </VerticalStackLayout>
    </Border>

</ContentView>