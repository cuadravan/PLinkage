<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.ResignSkillProviderCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">
    <Frame
        Padding="0"
        BackgroundColor="White"
        CornerRadius="16"
        HasShadow="True">

        <Grid RowDefinitions="60, *, *, *, *">
            <!--  Avatar Circle  -->
            <Border
                Grid.Row="0"
                BackgroundColor="#7A5BFF"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">
                <Image
                    HorizontalOptions="Center"
                    Source="defaultprofileicon.png"
                    VerticalOptions="Center" />
            </Border>

            <Label
                Grid.Row="1"
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="Center"
                Text="{Binding Source={x:Reference ThisControl}, Path=FullName}" />

            <Label
                Grid.Row="2"
                FontSize="18"
                HorizontalOptions="Center"
                Text="{Binding Source={x:Reference ThisControl}, Path=ProjectName}" />

            <Label
                Grid.Row="3"
                Padding="10,0,10,0"
                FontSize="16"
                Text="{Binding Source={x:Reference ThisControl}, Path=Reason}" />

            <HorizontalStackLayout
                Grid.Row="4"
                HorizontalOptions="Center"
                Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding Source={x:Reference ThisControl}, Path=ApproveCommand}"
                    CommandParameter="{Binding Source={x:Reference ThisControl}, Path=CommandParameter}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Approve"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding Source={x:Reference ThisControl}, Path=RejectCommand}"
                    CommandParameter="{Binding Source={x:Reference ThisControl}, Path=CommandParameter}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Reject"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>
        </Grid>


    </Frame>
</ContentView>
