<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.Controls.LabeledPickerNonBrowse"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">
    <VerticalStackLayout>
        <!--  Label  -->
        <Label
            Margin="20,0,0,5"
            FontAttributes="Bold"
            FontSize="14"
            Text="{Binding Source={x:Reference ThisControl}, Path=LabelText}"
            TextColor="Black" />

        <!--  Entry  -->
        <Border
            Padding="10,0,0,0"
            BackgroundColor="Transparent"
            Stroke="#7C4DFF"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1">
            <Picker
                Title="{Binding Source={x:Reference ThisControl}, Path=PlaceholderText}"
                FontFamily="Roboto Mono"
                FontSize="14"
                HorizontalTextAlignment="Center"
                ItemsSource="{Binding Source={x:Reference ThisControl}, Path=ItemSource}"
                SelectedItem="{Binding Source={x:Reference ThisControl}, Path=SelectedItem}"
                TextColor="Black" />
        </Border>

    </VerticalStackLayout>
</ContentView>
