<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="PLinkageApp.Controls.SearchFilterBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    x:Name="ThisControl">

    <Grid
        Padding="{OnPlatform WinUI='0'}"
        ColumnDefinitions="*, Auto"
        ColumnSpacing="5"
        HorizontalOptions="{OnPlatform Android=Center,
                                       WinUI=Fill}"
        VerticalOptions="{OnPlatform Android=Center,
                                     WinUI=Fill}">

        <controls:SearchInput
            Grid.Column="0"
            ControlWidth="{Binding Source={x:Reference ThisControl}, Path=SearchWidth}"
            IconSource="{Binding Source={x:Reference ThisControl}, Path=SearchIconSource}"
            SearchPlaceholder="{Binding Source={x:Reference ThisControl}, Path=SearchPlaceholder}"
            SearchQuery="{Binding Source={x:Reference ThisControl}, Path=SearchQuery}" />

        <controls:FilterButton
            Grid.Column="1"
            FilterItemSource="{Binding Source={x:Reference ThisControl}, Path=FilterItemSource}"
            FilterSelectedItem="{Binding Source={x:Reference ThisControl}, Path=FilterSelectedItem}"
            FilterTitle="{Binding Source={x:Reference ThisControl}, Path=FilterTitle}" />

    </Grid>
</ContentView>