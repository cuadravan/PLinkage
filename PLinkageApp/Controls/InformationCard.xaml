<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.Controls.InformationCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PLinkageApp.AndroidControls"
    x:Name="ThisControl">

    <VerticalStackLayout Spacing="5">

        <Label
            Margin="5,0,0,0"
            FontAttributes="Bold"
            FontSize="20"
            Text="{Binding Source={x:Reference ThisControl}, Path=Title}"
            TextColor="#333333" />

        <Border
            Padding="20"
            BackgroundColor="White"
            HorizontalOptions="FillAndExpand"
            Stroke="#8A2BE2"
            StrokeShape="RoundRectangle 12"
            StrokeThickness="2">

            <VerticalStackLayout Spacing="15">

                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Gender:"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="16"
                        Text="{Binding Source={x:Reference ThisControl}, Path=Gender}"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Email:"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="16"
                        Text="{Binding Source={x:Reference ThisControl}, Path=Email}"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Mobile:"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="16"
                        Text="{Binding Source={x:Reference ThisControl}, Path=Mobile}"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>
