<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.StatCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Border
        Padding="3"
        BackgroundColor="#7C4DFF"
        HeightRequest="85"
        Stroke="#7C4DFF"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="0"
        WidthRequest="85">
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="3"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                x:Name="TitleLabel"
                FontAttributes="Bold"
                FontSize="12"
                HorizontalTextAlignment="Center"
                LineBreakMode="WordWrap"
                MaxLines="2"
                Text="{Binding Title}"
                TextColor="White" />

            <!--  Value  -->
            <Label
                x:Name="ValueLabel"
                FontAttributes="Bold"
                FontSize="36"
                HorizontalTextAlignment="Center"
                Text="{Binding Label}"
                TextColor="White" />

        </VerticalStackLayout>
    </Border>

</ContentView>