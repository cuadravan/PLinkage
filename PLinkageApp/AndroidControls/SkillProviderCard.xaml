<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.SkillProviderCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">
    <Frame
        Margin="10"
        Padding="0"
        BackgroundColor="White"
        BorderColor="#E0E0E0"
        CornerRadius="12"
        HasShadow="True"
        MaximumHeightRequest="300"
        VerticalOptions="Start"
        WidthRequest="280">

        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Source={x:Reference ThisControl}, Path=Command}" CommandParameter="{Binding Source={x:Reference ThisControl}, Path=CommandParameter}" />
        </Frame.GestureRecognizers>

        <VerticalStackLayout>

            <!--  Header  -->
            <Grid Padding="12" BackgroundColor="#7B5CF4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Margin="0,0,0,5"
                    FontAttributes="Bold"
                    FontSize="18"
                    LineBreakMode="TailTruncation"
                    MaxLines="2"
                    Text="{Binding Source={x:Reference ThisControl}, Path=UserName}"
                    TextColor="White" />
                <Grid Grid.Row="1" ColumnSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Frame
                        Grid.Column="0"
                        Padding="3"
                        BackgroundColor="White"
                        CornerRadius="5">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            LineBreakMode="TailTruncation"
                            MaxLines="1"
                            Text="{Binding Source={x:Reference ThisControl}, Path=UserRating}"
                            TextColor="#7C4DFF" />
                    </Frame>

                    <Frame
                        Grid.Column="1"
                        Padding="3"
                        BackgroundColor="White"
                        CornerRadius="5">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            LineBreakMode="TailTruncation"
                            MaxLines="1"
                            Text="{Binding Source={x:Reference ThisControl}, Path=Location}"
                            TextColor="#7C4DFF" />
                    </Frame>
                </Grid>


            </Grid>

            <!--  Description  -->
            <VerticalStackLayout Padding="12,8">
                <Label
                    FontSize="14"
                    LineBreakMode="TailTruncation"
                    MaxLines="5"
                    Text="{Binding Education}"
                    TextColor="Black" />
            </VerticalStackLayout>

            <!--  Skills  -->
            <FlexLayout
                Padding="12,4"
                BindableLayout.ItemsSource="{Binding Skills}"
                Direction="Row"
                JustifyContent="Start"
                Wrap="Wrap">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,0,2,4"
                            Padding="8,4"
                            BackgroundColor="#7B5CF4"
                            CornerRadius="20"
                            HasShadow="False">
                            <Label
                                FontSize="13"
                                LineBreakMode="TailTruncation"
                                MaxLines="1"
                                Text="{Binding .}"
                                TextColor="White" />
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </FlexLayout>

        </VerticalStackLayout>
    </Frame>
</ContentView>
