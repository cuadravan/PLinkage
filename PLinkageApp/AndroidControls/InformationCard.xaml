<?xml version="1.0" encoding="utf-8" ?>
<!--
    1. Make sure this namespace matches your control's folder
-->
<ContentView
    x:Class="PLinkageApp.AndroidControls.InformationCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PLinkageApp.AndroidControls">

    <VerticalStackLayout Spacing="5">

        <!--  The "Information" Title  -->
        <Label
            Margin="5,0,0,0"
            FontAttributes="Bold"
            FontSize="20"
            Text="{Binding Title, Source={RelativeSource AncestorType={x:Type local:InformationCard}}}"
            TextColor="#333333" />

        <!--  The Purple-Bordered Box  -->
        <Border
            Padding="20"
            BackgroundColor="White"
            HorizontalOptions="FillAndExpand"
            Stroke="#8A2BE2"
            StrokeShape="RoundRectangle 12"
            StrokeThickness="2">

            <VerticalStackLayout Spacing="15">

                <!--  Row 1: Gender  -->
                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Gender:"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="16"
                        Text="{Binding Gender, Source={RelativeSource AncestorType={x:Type local:InformationCard}}}"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  Row 2: Email  -->
                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Email:"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="16"
                        Text="{Binding Email, Source={RelativeSource AncestorType={x:Type local:InformationCard}}}"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  Row 3: Mobile  -->
                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Mobile:"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="16"
                        Text="{Binding Mobile, Source={RelativeSource AncestorType={x:Type local:InformationCard}}}"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>
