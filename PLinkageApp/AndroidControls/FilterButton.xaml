<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.FilterButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">

    <Frame
        Padding="0"
        BackgroundColor="White"
        BorderColor="#7C4DFF"
        CornerRadius="8"
        HasShadow="False">
        <Picker
            Title="{Binding Source={x:Reference ThisControl}, Path=FilterTitle}"
            HorizontalOptions="Fill"
            HorizontalTextAlignment="Center"
            ItemsSource="{Binding Source={x:Reference ThisControl}, Path=FilterItemSource}"
            MinimumWidthRequest="100"
            SelectedItem="{Binding Source={x:Reference ThisControl}, Path=FilterSelectedItem}"
            TextColor="#7D7D7D"
            TitleColor="#333333"
            VerticalOptions="Center" />
    </Frame>
</ContentView>
