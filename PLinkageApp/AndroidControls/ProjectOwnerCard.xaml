<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.ProjectOwnerCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">

    <Frame
        Margin="10"
        Padding="0"
        BackgroundColor="White"
        BorderColor="#E0E0E0"
        CornerRadius="12"
        HasShadow="True"
        MaximumHeightRequest="300"
        VerticalOptions="Start"
        WidthRequest="280">

        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Source={x:Reference ThisControl}, Path=Command}" CommandParameter="{Binding Source={x:Reference ThisControl}, Path=CommandParameter}" />
        </Frame.GestureRecognizers>

        <VerticalStackLayout>

            <!--  Header  -->
            <Grid Padding="12" BackgroundColor="#7B5CF4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Margin="0,0,0,5"
                    FontAttributes="Bold"
                    FontSize="18"
                    LineBreakMode="TailTruncation"
                    MaxLines="2"
                    Text="{Binding UserName}"
                    TextColor="White" />
                <Grid Grid.Row="1" ColumnSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


                    <Frame
                        Grid.Column="1"
                        Padding="3"
                        BackgroundColor="White"
                        CornerRadius="5"
                        HorizontalOptions="End">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            LineBreakMode="TailTruncation"
                            MaxLines="1"
                            Text="{Binding UserStatus}"
                            TextColor="#7C4DFF" />
                    </Frame>
                </Grid>


            </Grid>

            <!--  Description  -->
            <VerticalStackLayout Padding="12,8">
                <Label
                    FontSize="14"
                    LineBreakMode="TailTruncation"
                    MaxLines="5"
                    Text="{Binding ProjectCount}"
                    TextColor="Black" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Frame>
</ContentView>
