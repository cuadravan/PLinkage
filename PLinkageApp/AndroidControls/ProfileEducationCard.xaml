<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.ProfileEducationCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">
    <Border
        Margin="0,0,0,5"
        Padding="15"
        BackgroundColor="White"
        Stroke="#8A2BE2"
        StrokeShape="RoundRectangle 12"
        StrokeThickness="2">
        <VerticalStackLayout Spacing="5">
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="{Binding  Source={x:Reference ThisControl}, Path=SchoolAttended}"
                TextColor="#333333" />
            <Label
                FontSize="14"
                Text="{Binding  Source={x:Reference ThisControl}, Path=CourseName}"
                TextColor="#8A2BE2" />
            <Label
                Margin="0,10,0,0"
                FontSize="14"
                Text="{Binding  Source={x:Reference ThisControl}, Path=TimeGraduated, StringFormat='Graduated {0:MMMM yyyy}'}"
                TextColor="#666666" />
        </VerticalStackLayout>
    </Border>
</ContentView>
