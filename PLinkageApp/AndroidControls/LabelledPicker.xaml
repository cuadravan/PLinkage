<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.LabeledPicker"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Spacing="3">
        <Label
            FontAttributes="Bold"
            FontSize="14"
            HorizontalOptions="Center"
            Text="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=TitleText}"
            TextColor="#212121" />

        <Border
            BackgroundColor="White"
            HorizontalOptions="Center"
            Stroke="#7C4DFF"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1"
            WidthRequest="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=ControlWidth}">
            <Picker
                Title="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=PlaceholderText}"
                FontFamily="Roboto Mono"    
                FontSize="16"
                HorizontalTextAlignment="Center"
                ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=ItemSource}"
                SelectedItem="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=SelectedItem}"
                TextColor="#212121" />
        </Border>
    </VerticalStackLayout>
</ContentView>
