<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.Controls.InfoBanner"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        BackgroundColor="{Binding Source={x:Reference Root}, Path=BannerBackgroundColor}"
        StrokeThickness="0"
        Padding="10"
        StrokeShape="RoundRectangle 10">
        <HorizontalStackLayout Spacing="10">
            <Label
                Text="{Binding Source={x:Reference Root}, Path=Text}"
                TextColor="#555"
                FontSize="13"
                VerticalOptions="Center"
                LineBreakMode="WordWrap" />
            <Image
                Source="{Binding Source={x:Reference Root}, Path=IconSource}"
                HeightRequest="22"
                WidthRequest="22"
                VerticalOptions="Center" />
        </HorizontalStackLayout>
    </Border>
</ContentView>
