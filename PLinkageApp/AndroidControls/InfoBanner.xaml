<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.Controls.InfoBanner"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        Padding="10"
        BackgroundColor="{Binding Source={x:Reference Root}, Path=BannerBackgroundColor}"
        StrokeShape="RoundRectangle 10"
        StrokeThickness="0">
        <HorizontalStackLayout Spacing="10">
            <Label
                FontAttributes="Bold"
                FontSize="14"
                LineBreakMode="WordWrap"
                Text="{Binding Source={x:Reference Root}, Path=Text}"
                TextColor="#696767"
                VerticalOptions="Center" />
            <Image
                HeightRequest="50"
                Source="{Binding Source={x:Reference Root}, Path=IconSource}"
                VerticalOptions="Center"
                WidthRequest="50" />
        </HorizontalStackLayout>
    </Border>
</ContentView>
