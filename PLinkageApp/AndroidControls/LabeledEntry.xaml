<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.Controls.LabeledEntry"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">

    <VerticalStackLayout>
        <!--  Label  -->
        <Label
            Margin="20,0,0,5"
            FontAttributes="Bold"
            FontSize="14"
            Text="{Binding Source={x:Reference ThisControl}, Path=LabelText}"
            TextColor="Black" />

        <!--  Entry  -->
        <Border
            Padding="10,0,0,0"
            BackgroundColor="Transparent"
            Stroke="#7C4DFF"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1">
            <Entry
                BackgroundColor="Transparent"
                FontSize="14"
                Keyboard="{Binding Source={x:Reference ThisControl}, Path=Keyboard}"
                Placeholder="{Binding Source={x:Reference ThisControl}, Path=Placeholder}"
                Text="{Binding Source={x:Reference ThisControl}, Path=Text, Mode=TwoWay}"
                TextColor="Black"
                VerticalTextAlignment="{Binding Source={x:Reference ThisControl}, Path=VerticalTextAlignment}" />
        </Border>

    </VerticalStackLayout>
</ContentView>

