<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PLinkageApp.AndroidControls.RateSkillProviderCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="ThisControl">
    <Frame
        Padding="0"
        BackgroundColor="White"
        CornerRadius="16"
        HasShadow="True">

        <Grid RowDefinitions="60, Auto, Auto">
            <Border
                Grid.Row="0"
                BackgroundColor="#7A5BFF"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">

                <Image
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Source="defaultprofileicon.png"
                    VerticalOptions="Center"
                    WidthRequest="50" />
            </Border>

            <Label
                Grid.Row="1"
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="Center"
                Text="{Binding Source={x:Reference ThisControl}, Path=FullName}" />

            <toolkit:RatingView
                Grid.Row="2"
                FillColor="Gold"
                HorizontalOptions="Center"
                MaximumRating="5"
                Rating="{Binding Source={x:Reference ThisControl}, Path=Rating, Mode=TwoWay}" />
        </Grid>

    </Frame>

</ContentView>
