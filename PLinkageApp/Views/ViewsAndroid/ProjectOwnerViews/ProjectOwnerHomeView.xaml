<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.ProjectOwnerHomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.AndroidControls"
    xmlns:viewmodels="clr-namespace:PLinkageApp.ViewModels"
    Title="ProjectOwnerHomeView"
    Shell.NavBarIsVisible="False">

    <Grid Padding="0,20">

        <VerticalStackLayout Spacing="7">
            <Image Source="plinkagenotext.svg" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Welcome, Project Owner!"
                TextColor="#212121" />

            <FlexLayout
                HorizontalOptions="CenterAndExpand"
                JustifyContent="Center"
                Wrap="Wrap">

                <controls:StatCard
                    Title="Received Applications"
                    Margin="0,0,5,0"
                    Value="{Binding PendingReceivedApplicationsValue}" />
                <controls:StatCard
                    Title="Pending Sent Offers"
                    Margin="0,0,5,0"
                    Value="{Binding PendingSentOffersValue}" />
            </FlexLayout>
            <FlexLayout
                HorizontalOptions="CenterAndExpand"
                JustifyContent="Center"
                Wrap="Wrap">
                <controls:StatCard
                    Title="Active Projects"
                    Margin="0,0,5,0"
                    Value="{Binding ActiveProjectsValue}" />
                <controls:StatCard
                    Title="Reported Resignations"
                    Margin="0,0,5,0"
                    Value="{Binding ReportedResignationsValue}" />
                <controls:StatCard
                    Title="Reported Negotiations"
                    Margin="0,0,5,0"
                    Value="{Binding ReportedNegotiationsValue}" />
            </FlexLayout>

            <controls:LabeledPicker
                ItemSource="{Binding SortOptions}"
                SelectedItem="{Binding SortSelection}"
                TitleText="Top Skill Providers For You" />

            <CarouselView ItemsSource="{Binding SkillProviderCards}" PeekAreaInsets="50">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <controls:SkillProviderCard
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProjectOwnerHomeViewModel}}, Path=ViewSkillProviderCommand}"
                            CommandParameter="{Binding .}"
                            Education="{Binding Education}"
                            Location="{Binding Location}"
                            Skills="{Binding Skills}"
                                UserName="{Binding UserName}"
                            UserRating="{Binding UserRating}" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>

                <CarouselView.EmptyView>
                    <ContentView>
                        <Label
                            HorizontalOptions="Center"
                            Text="No skill providers found."
                            VerticalOptions="Center" />
                    </ContentView>
                </CarouselView.EmptyView>
            </CarouselView>
        </VerticalStackLayout>

        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center"
            Color="#7C4DFF" />

    </Grid>
</ContentPage>