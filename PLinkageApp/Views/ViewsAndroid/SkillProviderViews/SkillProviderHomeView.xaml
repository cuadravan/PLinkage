<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.SkillProviderHomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    xmlns:viewmodels="clr-namespace:PLinkageApp.ViewModels"
    Title="SkillProviderHomeView"
    Shell.NavBarIsVisible="False">

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy, Mode=OneWay}">

        <VerticalStackLayout Spacing="7" Padding="16">
            <Image Source="plinkagenotext.svg" HorizontalOptions="Center" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Welcome, Skill Provider!"
                TextColor="#212121" />

            <FlexLayout
                HorizontalOptions="CenterAndExpand"
                JustifyContent="Center"
                Wrap="Wrap">

                <controls:StatCard
                    Title="Active Projects"
                    Margin="0,0,5,0"
                    Value="{Binding ActiveProjectsValue}" />
                <controls:StatCard
                    Title="Sent Applications"
                    Margin="0,0,5,0"
                    Value="{Binding PendingSentApplicationsValue}" />
            </FlexLayout>
            <FlexLayout
                HorizontalOptions="CenterAndExpand"
                JustifyContent="Center"
                Wrap="Wrap">
                <controls:StatCard
                    Title="Received Offers"
                    Margin="0,0,5,0"
                    Value="{Binding PendingReceivedOffersValue}" />
            </FlexLayout>

            <controls:LabeledPicker
                ItemSource="{Binding SortOptions}"
                SelectedItem="{Binding SortSelection}"
                TitleText="Suggested Projects" />

            <!-- Mobile-friendly vertical list -->
            <CollectionView
                ItemsSource="{Binding ProjectCards}"
                SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <controls:ProjectCard
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderHomeViewModel}}, Path=ViewProjectCommand}"
                                CommandParameter="{Binding .}"
                                Title="{Binding Title}"
                                Description="{Binding Description}"
                                Location="{Binding Location}"
                                Skills="{Binding Skills}"
                                Slots="{Binding Slots}"
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="No projects found."
                        TextColor="Gray" />
                </CollectionView.EmptyView>
            </CollectionView>
        </VerticalStackLayout>

    </RefreshView>
</ContentPage>