<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.AddEducationView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.AndroidControls"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Add Education"
                TextColor="Black" />

            <!--  Info Box  -->
            <!--<Border
                BackgroundColor="#F2ECFF"
                StrokeThickness="0"
                Padding="10"
                StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout Spacing="10">
                    <Label
                        Text="A good education will make you more viable."
                        TextColor="#555"
                        FontSize="13"
                        VerticalOptions="Center" />
                    <Image
                        Source="plinkage.png"
                        HeightRequest="22"
                        WidthRequest="22"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>-->

            <controls:InfoBanner IconSource="plinkage.png" Text="A good education will make you more viable." />

            <!--  Course Name  -->
            <controls:LabeledEntry
                LabelText="Course Name"
                Placeholder="What is your course?"
                Text="{Binding CourseName}" />

            <!--  School Attended  -->
            <controls:LabeledEntry
                LabelText="School Attended"
                Placeholder="Where did you get this course?"
                Text="{Binding SchoolAttended}" />

            <!--  Time Graduated  -->
            <controls:LabeledDatePicker Date="{Binding TimeGraduated}" LabelText="Time Graduated" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                Text="{Binding ErrorMessage}"
                TextColor="#FF6347" />

            <!--  Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding AddEducationCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Add Education"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
