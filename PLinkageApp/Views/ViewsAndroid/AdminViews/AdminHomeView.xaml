<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.AdminHomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    xmlns:viewmodels="clr-namespace:PLinkageApp.ViewModels"
    Title="AdminHomeView"
    Shell.NavBarIsVisible="False">

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy, Mode=OneWay}">

        <ScrollView>
            <VerticalStackLayout Padding="16,20" Spacing="12">
                <Image Source="plinkagenotext.svg" HorizontalOptions="Center" />
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Welcome, Admin!"
                    TextColor="#212121" />

                <FlexLayout
                    HorizontalOptions="CenterAndExpand"
                    JustifyContent="Center"
                    Wrap="Wrap">
                    <controls:StatCard
                        Title="Overall Active Projects"
                        Margin="0,0,5,0"
                        Value="{Binding ActiveProjectsValue}" />
                    <controls:StatCard
                        Title="Overall Completed Projects"
                        Margin="0,0,5,0"
                        Value="{Binding CompletedProjectsValue}" />
                    <controls:StatCard
                        Title="Employment Ratio"
                        Margin="0,0,5,0"
                        Value="{Binding EmploymentRatioValue}" />
                </FlexLayout>

                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Quick View of Active Projects"
                    TextColor="#212121" />

                <CollectionView
                    ItemsSource="{Binding ProjectCards}"
                    SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                                <controls:ProjectCard
                                    Title="{Binding Title}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminHomeViewModel}}, Path=ViewProjectCommand}"
                                    CommandParameter="{Binding .}"
                                    Description="{Binding Description}"
                                    Location="{Binding Location}"
                                    Skills="{Binding Skills}"
                                    Slots="{Binding Slots}"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="No active projects currently."
                            TextColor="Gray" />
                    </CollectionView.EmptyView>
                </CollectionView>

                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Quick View of Active Skill Providers For You"
                    TextColor="#212121" />

                <CollectionView
                    ItemsSource="{Binding SkillProviderCards}"
                    SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                                <controls:SkillProviderCard
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminHomeViewModel}}, Path=ViewSkillProviderCommand}"
                                    CommandParameter="{Binding .}"
                                    Education="{Binding Education}"
                                    Location="{Binding Location}"
                                    Skills="{Binding Skills}"
                                    UserName="{Binding UserName}"
                                    UserRating="{Binding UserRating}"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="No active skill providers currently."
                            TextColor="Gray" />
                    </CollectionView.EmptyView>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>