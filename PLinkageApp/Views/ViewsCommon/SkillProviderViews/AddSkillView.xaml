<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.Views.AddSkillView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Add Skill"
    Shell.NavBarIsVisible="False">

    <ScrollView Padding="{OnPlatform WinUI='500,0,500,0', Android='0'}">
        <VerticalStackLayout
            Padding="25,50,25,25"
            Spacing="5"
            VerticalOptions="Center">

            <Label
                Margin="0,0,0,10"
                FontAttributes="Bold"
                FontSize="22"
                Text="Add Skill"
                TextColor="Black" />

            <!--<Frame BackgroundColor="#F3EFFF"
               CornerRadius="10"
               Padding="10"
               HasShadow="False">
            <HorizontalStackLayout Spacing="10">
                <Image Source="plinkage.png"
                       HeightRequest="25"
                       WidthRequest="25"
                       VerticalOptions="Center" />
                <Label Text="Skills will make you more attractive to employers."
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Frame>-->

            <controls:InfoBanner IconSource="plinkage.png" Text="Skills will make you more attractive to employers." />
            <!--  Skill Name  -->
            <controls:LabeledEntry
                LabelText="Skill Name"
                Placeholder="What is your skill?"
                Text="{Binding SkillName}" />

            <!--  Description  -->
            <controls:LabeledEntry
                LabelText="Description"
                Placeholder="Tell us more about it."
                Text="{Binding SkillDescription}" />

            <!--  Skill Level  -->
            <controls:LabeledPickerNonBrowse
                ItemSource="{Binding SkillLevelOptions}"
                LabelText="Skill Level"
                SelectedItem="{Binding SkillLevel}" />

            <!--  Time Acquired  -->
            <controls:LabeledDatePicker Date="{Binding TimeAcquired}" LabelText="Time Acquired" />

            <!--  Organization  -->
            <controls:LabeledEntry
                LabelText="Organization Involved"
                Placeholder="With whom did you get this skill?"
                Text="{Binding OrganizationInvolved}" />

            <!--  Years of Experience  -->
            <controls:LabeledEntry
                IsNumeric="True"
                LabelText="Years of Experience"
                Placeholder="How long did you practice this skill?"
                Text="{Binding YearsOfExperience}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                Text="{Binding ErrorMessage}"
                TextColor="#FF6347" />

            <!--  Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding AddSkillCommand}"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Add Skill"
                    TextColor="White" />

                <Button
                    BackgroundColor="Transparent"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="8"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
