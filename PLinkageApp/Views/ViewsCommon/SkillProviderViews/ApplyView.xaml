<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.Views.ApplyView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    Title="Apply to Project"
    Shell.NavBarIsVisible="False">

    <ScrollView Padding="{OnPlatform WinUI='500,0,500,0', Android='0'}">
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Apply"
                TextColor="Black" />

            <!--  Info Box  -->
            <!--<Border
            BackgroundColor="#F2ECFF"
            StrokeThickness="0"
            Padding="10"
            StrokeShape="RoundRectangle 10">
            <HorizontalStackLayout Spacing="10">
                <Label
                    Text="This will send an application to the project owner."
                    TextColor="#555"
                    FontSize="13"
                    VerticalOptions="Center" />
                <Image
                    Source="plinkage.png"
                    HeightRequest="22"
                    WidthRequest="22"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Border>-->

            <controls:InfoBanner IconSource="plinkage.png" Text="This will send an application to the project owner." />

            <!--  Project Name  -->
            <controls:LabeledEntry
                IsEnabled="False"
                LabelText="Project Name"
                Text="{Binding ProjectName}" />

            <!--  Applying Skill Provider  -->
            <controls:LabeledEntry
                IsEnabled="False"
                LabelText="Applying Skill Provider"
                Text="{Binding SkillProviderFullName}" />

            <!--  Requested Rate  -->
            <controls:LabeledEntry
                IsDecimal="True"
                IsNumeric="True"
                Keyboard="Numeric"
                LabelText="Requested Rate (Php per hour)"
                Placeholder="How much do you want to be paid?"
                Text="{Binding RateAsked}" />

            <!--  Requested Time Frame  -->
            <controls:LabeledEntry
                IsNumeric="True"
                Keyboard="Numeric"
                LabelText="Requested Time Frame (Hour)"
                Placeholder="How long do you want to work?"
                Text="{Binding TimeFrameAsked}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                Text="{Binding ErrorMessage}"
                TextColor="#FF6347" />

            <!--  Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding ApplyCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Apply"
                    TextColor="White" />
                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
