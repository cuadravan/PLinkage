<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.Views.ResignProjectView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    Title="Resign Project"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">
    <ScrollView Padding="{OnPlatform WinUI='500,0,500,0', Android='0'}">
        <VerticalStackLayout
            Padding="25,50,25,25"
            Spacing="5"
            VerticalOptions="Center">

            <Label
                Margin="0,0,0,10"
                FontAttributes="Bold"
                FontSize="22"
                Text="Resign Project"
                TextColor="Black" />

            <controls:InfoBanner IconSource="plinkage.png" Text="This will send a resignation request to be approved by the project owner." />
            <!--  Skill Level  -->
            <controls:LabeledLabel LabelText="Project To Resign" Text="{Binding ProjectName}" />

            <controls:LabeledLabel LabelText="Resignee" Text="{Binding SkillProviderFullName}" />

            <controls:LabeledEntry
                LabelText="Reason of Resignation"
                Placeholder="Please input your reason for resigning."
                Text="{Binding ResignationReason}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                Text="{Binding ErrorMessage}"
                TextColor="#FF6347" />

            <!--  Buttons  -->
            <HorizontalStackLayout
                Margin="0,10,0,0"
                HorizontalOptions="Center"
                Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding SendResignationCommand}"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Send Request"
                    TextColor="White" />

                <Button
                    BackgroundColor="Transparent"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="8"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>