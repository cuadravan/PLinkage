<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.Views.RegisterView3"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    BackgroundColor="#F8F9FC">

    <ScrollView HorizontalOptions="Center">
        <VerticalStackLayout
            Padding="20"
            HorizontalOptions="Center"
            Spacing="25"
            VerticalOptions="Center">

            <!--  Logo  -->
            <Image
                HeightRequest="200"
                HorizontalOptions="Center"
                Source="plinkage.png"
                WidthRequest="200" />

            <!--  Card  -->
            <Frame
                Padding="25"
                BorderColor="Transparent"
                CornerRadius="15"
                HasShadow="True"
                WidthRequest="320">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.0" Color="#7C4DFF" />
                        <GradientStop Offset="1.0" Color="#4A2E99" />
                    </LinearGradientBrush>
                </Frame.Background>

                <VerticalStackLayout Spacing="15">

                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="We're almost done!"
                        TextColor="White" />

                    <Label
                        FontAttributes="Italic"
                        FontSize="13"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Tell us more about you!"
                        TextColor="White" />

                    <Label
                        FontAttributes="Italic"
                        FontSize="13"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="These information will improve your Linkage experience!"
                        TextColor="White" />

                    <!--  Birthdate  -->
                    <VerticalStackLayout>
                        <Label
                            FontSize="14"
                            Text="Birthdate"
                            TextColor="White" />
                        <Border
                            BackgroundColor="White"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <DatePicker
                                Margin="10,0"
                                Date="{Binding Birthdate}"
                                FontSize="14"
                                HeightRequest="45"
                                TextColor="Black" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Gender  -->
                    <VerticalStackLayout>
                        <Label
                            FontSize="14"
                            Text="Gender"
                            TextColor="White" />
                        <Border
                            BackgroundColor="White"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Picker
                                Margin="10,0"
                                FontSize="14"
                                HeightRequest="45"
                                ItemsSource="{Binding GenderOptions}"
                                SelectedItem="{Binding SelectedGender}"
                                TextColor="Black" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Location  -->
                    <VerticalStackLayout>
                        <Label
                            FontSize="14"
                            Text="Location"
                            TextColor="White" />
                        <Border
                            BackgroundColor="White"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Picker
                                Margin="10,0"
                                FontSize="14"
                                HeightRequest="45"
                                ItemsSource="{Binding LocationOptions}"
                                SelectedItem="{Binding SelectedLocation}"
                                TextColor="Black" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Mobile Number  -->
                    <VerticalStackLayout>
                        <Label
                            FontSize="14"
                            Text="Mobile Number"
                            TextColor="White" />
                        <Border
                            BackgroundColor="White"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Margin="10,0"
                                BackgroundColor="White"
                                FontSize="14"
                                HeightRequest="45"
                                Keyboard="Telephone"
                                Placeholder="Your contact number"
                                PlaceholderColor="#727171"
                                Text="{Binding MobileNumber}"
                                TextColor="Black" />
                        </Border>
                        <Label
                            Margin="0,10,0,0"
                            FontAttributes="Bold"
                            FontSize="14"
                            HorizontalOptions="Center"
                            IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                            Text="{Binding ErrorMessage}"
                            TextColor="#FF6347" />
                    </VerticalStackLayout>

                    <!--  Next Button  -->
                    <Button
                        BackgroundColor="White"
                        Command="{Binding GoToRegisterView4Command}"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        HeightRequest="45"
                        Text="Next"
                        TextColor="#7C4DFF" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
