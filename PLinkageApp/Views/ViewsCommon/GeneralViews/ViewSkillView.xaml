<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.Views.ViewSkillView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView Padding="{OnPlatform WinUI='500,0,500,0', Android='0'}">
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="View Skill"
                TextColor="Black" />

            <!--  Info Box  -->
            <!--<Border
                BackgroundColor="#F2ECFF"
                StrokeThickness="0"
                Padding="10"
                StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout Spacing="10">
                    <Label
                        Text="You are currently viewing a skill from Van Cuadra."
                        TextColor="#555"
                        FontSize="13"
                        VerticalOptions="Center" />
                    <Image
                        Source="plinkage.png"
                        HeightRequest="22"
                        WidthRequest="22"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>-->

            <controls:InfoBanner IconSource="plinkage.png" Text="You are currently viewing a skill." />
            <Label
                Margin="5,0,0,0"
                FontSize="14"
                IsVisible="{Binding IsOwner}"
                Text="Tip: You can edit your skill here."
                TextColor="Gray"
                VerticalOptions="Center" />
            <!--  Skill Fields  -->
            <controls:LabeledEntry
                IsEnabled="{Binding IsOwner}"
                LabelText="Skill Name"
                Text="{Binding SkillName}" />

            <controls:LabeledEntry
                IsEnabled="{Binding IsOwner}"
                LabelText="Description"
                Text="{Binding SkillDescription}" />

            <!--  Skill Level  -->
            <controls:LabeledPickerNonBrowse
                IsEnabled="{Binding IsOwner}"
                ItemSource="{Binding SkillLevelOptions}"
                LabelText="Skill Level"
                SelectedItem="{Binding SkillLevel}" />

            <controls:LabeledDatePicker
                Date="{Binding TimeAcquired}"
                IsEnabled="{Binding IsOwner}"
                LabelText="Time Acquired" />

            <controls:LabeledEntry
                IsEnabled="{Binding IsOwner}"
                LabelText="Organization Involved"
                Text="{Binding OrganizationInvolved}" />

            <controls:LabeledEntry
                IsEnabled="{Binding IsOwner}"
                IsNumeric="True"
                LabelText="Years of Experience"
                Text="{Binding YearsOfExperience}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                Text="{Binding ErrorMessage}"
                TextColor="#FF6347" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding UpdateSkillCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsOwner}"
                    Text="Update Skill"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding ResetCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsOwner}"
                    Text="Reset"
                    TextColor="#7C4DFF" />
                <Button
                    BackgroundColor="Red"
                    Command="{Binding DeleteSkillCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsOwner}"
                    Text="Delete Skill"
                    TextColor="White" />
            </HorizontalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding ReturnCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Return"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
