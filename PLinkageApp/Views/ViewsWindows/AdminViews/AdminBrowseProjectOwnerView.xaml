<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsWindows.AdminBrowseProjectOwnerView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    xmlns:viewmodels="clr-namespace:PLinkageApp.ViewModels"
    Title="Browse Project Owners"
    Shell.NavBarIsVisible="False">

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy, Mode=OneWay}">
        <ScrollView Padding="30">
            <VerticalStackLayout Spacing="20">
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label
                            FontAttributes="Bold"
                            FontSize="28"
                            Text="Browse Project Owners"
                            TextColor="#212121" />
                        <Label
                            FontSize="14"
                            Text="Manage and monitor all project owners."
                            TextColor="Gray" />
                    </VerticalStackLayout>

                    <!--  Refresh Button  -->
                    <Button
                        Grid.Column="1"
                        Padding="5"
                        Command="{Binding RefreshCommand}"
                        FontSize="20"
                        Text="âŸ³" />
                </Grid>

                <Border
                    Padding="16"
                    BackgroundColor="White"
                    Stroke="#7C4DFF"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="1">
                    <VerticalStackLayout Spacing="20">

                        <controls:LabeledPicker
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBooleanConverter}}"
                            ItemSource="{Binding CategoryOptions}"
                            PlaceholderText="Select Category"
                            SelectedItem="{Binding CategorySelection}"
                            TitleText="Filter By Category" />

                        <controls:LabeledPicker
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBooleanConverter}}"
                            IsVisible="{Binding CategorySelection, Converter={StaticResource SortToVisibilityConverter}}"
                            ItemSource="{Binding LocationOptions}"
                            PlaceholderText="Select Location"
                            SelectedItem="{Binding LocationSelection}"
                            TitleText="Location Selection" />

                        <controls:LabeledPicker
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBooleanConverter}}"
                            ItemSource="{Binding StatusOptions}"
                            PlaceholderText="Select Status"
                            SelectedItem="{Binding StatusSelection}"
                            TitleText="By User Status" />


                    </VerticalStackLayout>

                </Border>

                <controls:SearchInput
                    IconSource="search.png"
                    SearchPlaceholder="Search by name..."
                    SearchQuery="{Binding SearchQuery}" />
                <BoxView HeightRequest="1" Color="#E0E0E0" />

                <FlexLayout
                    AlignContent="Start"
                    AlignItems="Start"
                    BindableLayout.ItemsSource="{Binding ProjectOwnerCards}"
                    Direction="Row"
                    JustifyContent="Start"
                    Wrap="Wrap">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <controls:ProjectOwnerCard
                                Margin="0,0,15,15"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminBrowseProjectOwnerViewModel}}, Path=ViewProjectOwnerCommand}"
                                CommandParameter="{Binding .}"
                                ProjectCount="{Binding ProjectCount}"
                                UserName="{Binding UserName}"
                                UserStatus="{Binding UserStatus}"
                                WidthRequest="340" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                    <FlexLayout.Triggers>
                        <DataTrigger
                            Binding="{Binding ProjectOwnerCards.Count}"
                            TargetType="FlexLayout"
                            Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </FlexLayout.Triggers>
                </FlexLayout>

                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    IsVisible="{Binding ProjectOwnerCards.Count, Converter={StaticResource InverseCountToBoolConverter}}"
                    Text="No project owners found under criteria selected."
                    TextColor="Gray" />

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>