<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.Views.RateSkillProviderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.WindowsControls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Rate Employed Skill Providers"
    Shell.NavBarIsVisible="False">

    <ScrollView Padding="500,0,500,0">
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Rate Skill Provider"
                TextColor="#000" />

            <!--  Reusable InfoBanner Component  -->
            <controls:InfoBanner IconSource="plinkagenotext.png" Text="Congratulations on the finished project! Please rate your employed providers to finalize completion." />

            <CollectionView ItemsSource="{Binding SkillProvidersToRate}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <controls:RateSkillProviderCard FullName="{Binding FullName}" Rating="{Binding SkillProviderRating, Mode=TwoWay}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding SubmitRatingsCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Submit Ratings"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

            <Label
                FontSize="16"
                HorizontalTextAlignment="Center"
                Text="Note: You must submit to update the project as completed."
                TextColor="#000" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
