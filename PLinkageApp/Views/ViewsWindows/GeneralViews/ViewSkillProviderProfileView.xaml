<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsWindows.ViewSkillProviderProfileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    xmlns:viewmodels="clr-namespace:PLinkageApp.ViewModels"
    Title="View Skill Provider"
    Shell.NavBarIsVisible="False">

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy, Mode=OneWay}">
        <ScrollView>
            <VerticalStackLayout Spacing="5">

                <controls:UserProfileCard
                    DeactivateActivateCommand="{Binding ToggleUserActivationCommand}"
                    IsDeactivateActivateButtonVisible="{Binding IsDeactivateButtonVisible}"
                    IsMessageButtonVisible="{Binding IsMessageButtonVisible}"
                    IsRatingVisible="{Binding IsRatingVisible}"
                    IsSendOfferButtonVisible="{Binding IsSendOfferButtonVisible}"
                    IsUserActivated="{Binding IsUserCurrentlyActive, Mode=TwoWay}"
                    JoinedDate="{Binding SkillProviderDto.JoinedOn}"
                    MessageCommand="{Binding MessageUserCommand}"
                    RefreshCommand="{Binding RefreshCommand}"
                    SendOfferCommand="{Binding SendOfferCommand}"
                    UserName="{Binding SkillProviderDto.UserName}"
                    UserRating="{Binding SkillProviderDto.UserRating}"
                    UserSubtitle="{Binding SkillProviderDto.UserLocation}" />
                <VerticalStackLayout Padding="50" Spacing="5">
                    <controls:InformationCard
                        Title="Information"
                        Email="{Binding SkillProviderDto.UserEmail}"
                        Gender="{Binding SkillProviderDto.UserGender}"
                        Mobile="{Binding SkillProviderDto.UserPhone}" />

                    <BoxView HeightRequest="1" Color="#E0E0E0" />

                    <Grid ColumnDefinitions="*, 20, *">

                        <VerticalStackLayout Grid.Column="0" Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Education"
                                TextColor="#212121" />

                            <CollectionView ItemsSource="{Binding SkillProviderDto.Educations}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <controls:ProfileEducationCard
                                            CourseName="{Binding CourseName}"
                                            SchoolAttended="{Binding SchoolAttended}"
                                            TimeGraduated="{Binding TimeGraduated}" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                                <CollectionView.EmptyView>
                                    <Label
                                        FontAttributes="Italic"
                                        Text="No education details provided."
                                        TextColor="Gray" />
                                </CollectionView.EmptyView>
                            </CollectionView>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="2" Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Skills"
                                TextColor="#212121" />

                            <Border
                                Padding="15"
                                BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeShape="RoundRectangle 8"
                                StrokeThickness="1">

                                <FlexLayout
                                    AlignItems="Start"
                                    BindableLayout.ItemsSource="{Binding SkillProviderDto.Skills}"
                                    Direction="Row"
                                    JustifyContent="Start"
                                    Wrap="Wrap">

                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <controls:SkillPill
                                                Margin="0,0,8,8"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ViewSkillProviderProfileViewModel}}, Path=ViewSkillCommand}"
                                                CommandParameter="{Binding .}"
                                                SkillName="{Binding SkillName}" />
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>

                                    <BindableLayout.EmptyView>
                                        <Label
                                            FontAttributes="Italic"
                                            Text="No skills listed."
                                            TextColor="Gray" />
                                    </BindableLayout.EmptyView>
                                </FlexLayout>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0" />

                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="20"
                            Text="Employed Projects"
                            TextColor="#212121" />

                        <FlexLayout
                            AlignContent="Start"
                            AlignItems="Start"
                            BindableLayout.ItemsSource="{Binding SkillProviderDto.ProfileProjects}"
                            Direction="Row"
                            JustifyContent="Start"
                            Wrap="Wrap">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <controls:ProfileProjectCard
                                        Margin="0,0,10,10"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ViewSkillProviderProfileViewModel}}, Path=ViewProjectCommand}"
                                        CommandParameter="{Binding .}"
                                        IsOwner="False"
                                        ProjectName="{Binding ProjectName}"
                                        ProjectStatus="{Binding ProjectStatus}"
                                        WidthRequest="340" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                            <FlexLayout.Triggers>
                                <DataTrigger
                                    Binding="{Binding SkillProviderDto.ProfileProjects.Count}"
                                    TargetType="FlexLayout"
                                    Value="0">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </FlexLayout.Triggers>
                        </FlexLayout>

                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            IsVisible="{Binding SkillProviderDto.ProfileProjects.Count, Converter={StaticResource InverseCountToBoolConverter}}"
                            Text="This user is not currently employed in any projects."
                            TextColor="Gray" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>