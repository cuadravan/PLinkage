<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.Views.UpdateEducationView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.WindowsControls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Update Education"
    Shell.NavBarIsVisible="False">

    <ScrollView Padding="500,0,500,0">
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Update Education"
                TextColor="Black" />

            <!--  Info Box  -->
            <!--<Border
            BackgroundColor="#F2ECFF"
            StrokeThickness="0"
            Padding="10"
            StrokeShape="RoundRectangle 10">
            <HorizontalStackLayout Spacing="10">
                <Label
                    Text="Make sure your education accurately reflects you."
                    TextColor="#555"
                    FontSize="13"
                    VerticalOptions="Center" />
                <Image
                    Source="plinkage.png"
                    HeightRequest="22"
                    WidthRequest="22"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Border>-->

            <controls:InfoBanner IconSource="plinkage.png" Text="Make sure your education accurately reflects you." />

            <!--  Course Name  -->
            <controls:LabeledEntry LabelText="Course Name" Text="{Binding CourseName}" />

            <!--  School Attended  -->
            <controls:LabeledEntry LabelText="School Attended" Text="{Binding SchoolAttended}" />

            <!--  Time Graduated  -->
            <controls:LabeledDatePicker Date="{Binding TimeGraduated}" LabelText="Time Graduated" />

            <!--  Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding UpdateEducationCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Update Education"
                    TextColor="White" />

                <Button
                    BackgroundColor="Red"
                    Command="{Binding DeleteEducationCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Delete Education"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding ReturnCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Return"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
