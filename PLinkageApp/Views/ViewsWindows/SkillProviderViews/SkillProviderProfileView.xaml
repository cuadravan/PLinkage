<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsWindows.SkillProviderProfileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls"
    xmlns:viewmodels="clr-namespace:PLinkageApp.ViewModels"
    Title="My Profile"
    Shell.NavBarIsVisible="False">

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy, Mode=OneWay}">
        <ScrollView>
            <VerticalStackLayout Spacing="5">

                <controls:UserProfileCard
                    IsDeactivateActivateButtonVisible="False"
                    IsMessageButtonVisible="False"
                    IsRatingVisible="True"
                    IsSendOfferButtonVisible="False"
                    IsUpdateProfileButtonVisible="True"
                    JoinedDate="{Binding SkillProviderDto.JoinedOn}"
                    RefreshCommand="{Binding RefreshCommand}"
                    UpdateProfileCommand="{Binding UpdateProfileCommand}"
                    UserName="{Binding SkillProviderDto.UserName}"
                    UserRating="{Binding SkillProviderDto.UserRating}"
                    UserSubtitle="{Binding SkillProviderDto.UserLocation}" />
                <VerticalStackLayout Padding="50" Spacing="20">
                    <controls:InformationCard
                        Title="Information"
                        Email="{Binding SkillProviderDto.UserEmail}"
                        Gender="{Binding SkillProviderDto.UserGender}"
                        Mobile="{Binding SkillProviderDto.UserPhone}" />

                    <BoxView HeightRequest="1" Color="#E0E0E0" />

                    <Grid ColumnDefinitions="*, 20, *">

                        <VerticalStackLayout Grid.Column="0" Spacing="10">
                            <Grid ColumnDefinitions="*, Auto">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Education"
                                    TextColor="#212121"
                                    VerticalOptions="Center" />

                                <Button
                                    Grid.Column="1"
                                    BackgroundColor="#388E3C"
                                    Command="{Binding AddEducationCommand}"
                                    CornerRadius="6"
                                    FontSize="12"
                                    HeightRequest="35"
                                    Text="+ Add"
                                    TextColor="White" />
                            </Grid>

                            <CollectionView ItemsSource="{Binding SkillProviderDto.Educations}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <controls:ProfileEducationCard
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderProfileViewModel}}, Path=UpdateEducationCommand}"
                                            CommandParameter="{Binding .}"
                                            CourseName="{Binding CourseName}"
                                            SchoolAttended="{Binding SchoolAttended}"
                                            TimeGraduated="{Binding TimeGraduated}" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                                <CollectionView.EmptyView>
                                    <Label
                                        FontAttributes="Italic"
                                        Text="No education added."
                                        TextColor="Gray" />
                                </CollectionView.EmptyView>
                            </CollectionView>
                            <Label
                                Margin="5,0,0,0"
                                FontSize="14"
                                Text="Tip: Tap on education to update/delete."
                                TextColor="Gray"
                                VerticalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="2" Spacing="10">
                            <Grid ColumnDefinitions="*, Auto">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Skills"
                                    TextColor="#212121"
                                    VerticalOptions="Center" />

                                <Button
                                    Grid.Column="1"
                                    BackgroundColor="#388E3C"
                                    Command="{Binding AddSkillCommand}"
                                    CornerRadius="6"
                                    FontSize="12"
                                    HeightRequest="35"
                                    Text="+ Add"
                                    TextColor="White" />
                            </Grid>

                            <Border
                                Padding="15"
                                BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeShape="RoundRectangle 8"
                                StrokeThickness="1">

                                <FlexLayout
                                    AlignItems="Start"
                                    BindableLayout.ItemsSource="{Binding SkillProviderDto.Skills}"
                                    Direction="Row"
                                    JustifyContent="Start"
                                    Wrap="Wrap">

                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <controls:SkillPill
                                                Margin="0,0,8,8"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderProfileViewModel}}, Path=ViewSkillCommand}"
                                                CommandParameter="{Binding .}"
                                                SkillName="{Binding SkillName}" />
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>

                                    <BindableLayout.EmptyView>
                                        <Label
                                            FontAttributes="Italic"
                                            Text="No skills added yet."
                                            TextColor="Gray" />
                                    </BindableLayout.EmptyView>
                                </FlexLayout>
                            </Border>
                            <Label
                                Margin="5,0,0,0"
                                FontSize="14"
                                Text="Tip: Tap on skill to view more details/modify"
                                TextColor="Gray"
                                VerticalOptions="Center" />
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0" />

                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="20"
                            Text="Employed Projects"
                            TextColor="#212121" />

                        <FlexLayout
                            AlignContent="Start"
                            AlignItems="Start"
                            BindableLayout.ItemsSource="{Binding SkillProviderDto.ProfileProjects}"
                            Direction="Row"
                            JustifyContent="Start"
                            Wrap="Wrap">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <controls:ProfileProjectCard
                                        Margin="0,0,10,10"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SkillProviderProfileViewModel}}, Path=ViewProjectCommand}"
                                        CommandParameter="{Binding .}"
                                        IsOwner="True"
                                        ProjectName="{Binding ProjectName}"
                                        ProjectStatus="{Binding ProjectStatus}"
                                        Rate="{Binding Rate}"
                                        TimeFrame="{Binding TimeFrame}"
                                        WidthRequest="340" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                            <FlexLayout.Triggers>
                                <DataTrigger
                                    Binding="{Binding SkillProviderDto.ProfileProjects.Count}"
                                    TargetType="FlexLayout"
                                    Value="0">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </FlexLayout.Triggers>
                        </FlexLayout>

                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            IsVisible="{Binding SkillProviderDto.ProfileProjects.Count, Converter={StaticResource InverseCountToBoolConverter}}"
                            Text="You are not currently employed in any projects."
                            TextColor="Gray" />
                        <Label
                            Margin="5,0,0,0"
                            FontSize="14"
                            Text="Tip: Tap on project to view more details/resign."
                            TextColor="Gray"
                            VerticalOptions="Center" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>