<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.RegisterView2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    BackgroundColor="#F8F9FC">

    <ScrollView HorizontalOptions="Center">
        <VerticalStackLayout
            Padding="20"
            HorizontalOptions="Center"
            Spacing="25"
            VerticalOptions="Center">

            <!--  Logo  -->
            <Image
                HeightRequest="200"
                HorizontalOptions="Center"
                Source="plinkage.png"
                WidthRequest="200" />

            <!--  Card  -->
            <Frame
                Padding="25"
                BorderColor="Transparent"
                CornerRadius="15"
                HasShadow="True"
                WidthRequest="320">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.0" Color="#7C4DFF" />
                        <GradientStop Offset="1.0" Color="#4A2E99" />
                    </LinearGradientBrush>
                </Frame.Background>

                <VerticalStackLayout Spacing="15">

                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Hello, User!"
                        TextColor="White" />

                    <Label
                        FontAttributes="Italic"
                        FontSize="13"
                        HorizontalOptions="Center"
                        Text="Input your login credentials!"
                        TextColor="White" />

                    <!--  Email  -->
                    <VerticalStackLayout>
                        <Label
                            Margin="10,0,0,0"
                            FontSize="14"
                            Text="Email"
                            TextColor="White" />
                        <Border
                            BackgroundColor="White"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Margin="10,0"
                                BackgroundColor="White"
                                FontSize="14"
                                HeightRequest="45"
                                Keyboard="Email"
                                Placeholder="Must be a unique email address"
                                PlaceholderColor="#727171"
                                Text="{Binding Email}"
                                TextColor="Black" />
                        </Border>

                    </VerticalStackLayout>

                    <!--  Password  -->
                    <VerticalStackLayout>
                        <Label
                            Margin="10,0,0,0"
                            FontSize="14"
                            Text="Password"
                            TextColor="White" />
                        <Border
                            BackgroundColor="White"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Margin="10,0"
                                BackgroundColor="White"
                                FontSize="14"
                                HeightRequest="45"
                                IsPassword="True"
                                Placeholder="At least 8 characters or more"
                                PlaceholderColor="#727171"
                                Text="{Binding Password}"
                                TextColor="Black" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Confirm Password  -->
                    <VerticalStackLayout>
                        <Label
                            Margin="10,0,0,0"
                            FontSize="14"
                            Text="Confirm Password"
                            TextColor="White" />
                        <Border
                            BackgroundColor="White"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Margin="10,0"
                                BackgroundColor="White"
                                FontSize="14"
                                HeightRequest="45"
                                IsPassword="True"
                                Placeholder="At least 8 characters or more"
                                PlaceholderColor="#727171"
                                Text="{Binding ConfirmPassword}"
                                TextColor="Black" />
                        </Border>
                        <Label
                            Margin="0,10,0,0"
                            FontAttributes="Bold"
                            FontSize="14"
                            HorizontalOptions="Center"
                            IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                            Text="{Binding ErrorMessage}"
                            TextColor="#FF6347" />
                    </VerticalStackLayout>

                    <!--  Next Button  -->
                    <Button
                        BackgroundColor="White"
                        Command="{Binding GoToRegisterView3Command}"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        HeightRequest="45"
                        Text="Next"
                        TextColor="#7C4DFF" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
