<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.RegisterPage4"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="25"
            Padding="20">

            <!-- Logo -->
            <Image
                Source="plinkage.png"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center" />

            <!-- App Name -->
            <Label
                Text="PLinkage"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                TextColor="#333" />

            <!-- Card -->
            <Frame
                BackgroundColor="#7C4DFF"
                CornerRadius="15"
                Padding="25"
                HasShadow="True"
                WidthRequest="320">

                <VerticalStackLayout Spacing="15">

                    <Label
                        Text="Now what role do you want?"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        TextColor="White" />

                    <Label
                        Text="Please note, this is a permanent decision."
                        FontAttributes="Italic"
                        FontSize="13"
                        HorizontalOptions="Center"
                        TextColor="White" />

                    <!-- Skill Provider Option -->
                    <Frame
                        x:Name="SkillProviderFrame"
                        BackgroundColor="{Binding SkillProviderColor}"
                        CornerRadius="10"
                        Padding="15"
                        HasShadow="False">
                        <Grid>
                            <VerticalStackLayout>
                                <Label Text="Skill Provider" FontAttributes="Bold" TextColor="#7C4DFF" />
                                <Label
                                    Text="You will be contributing your skills to meaningful projects suggested by our app."
                                    FontSize="13"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap" />
                            </VerticalStackLayout>

                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding SelectSkillProviderCommand}" />
                        </Grid>
                    </Frame>

                    <!-- Project Owner Option -->
                    <Frame
                        x:Name="ProjectOwnerFrame"
                        BackgroundColor="{Binding ProjectOwnerColor}"
                        CornerRadius="10"
                        Padding="15"
                        HasShadow="False">
                        <Grid>
                            <VerticalStackLayout>
                                <Label Text="Project Owner" FontAttributes="Bold" TextColor="#7C4DFF" />
                                <Label
                                    Text="You will be creating projects to unite and coordinate skilled people in our app."
                                    FontSize="13"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap" />
                            </VerticalStackLayout>

                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding SelectProjectOwnerCommand}" />
                        </Grid>
                    </Frame>

                    <!-- Confirm Button -->
                    <Button
                        Text="Confirm"
                        BackgroundColor="White"
                        TextColor="#7C4DFF"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="45"
                        Command="{Binding ConfirmCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
