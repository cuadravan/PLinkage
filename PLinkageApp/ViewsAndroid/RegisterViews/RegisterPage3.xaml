<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.RegisterPage3"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="25"
            Padding="20">

            <!-- Logo -->
            <Image
                Source="plinkage.png"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center" />

            <!-- App Name -->
            <Label
                Text="PLinkage"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                TextColor="#333" />

            <!-- Card -->
            <Frame
                BackgroundColor="#7C4DFF"
                BorderColor="Transparent"
                CornerRadius="15"
                Padding="25"
                HasShadow="True"
                WidthRequest="320">

                <VerticalStackLayout Spacing="15">

                    <Label
                        Text="We're almost done!"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        TextColor="White" />

                    <Label
                        Text="Tell us more about you!\nThese information will improve your Linkage experience!"
                        FontAttributes="Italic"
                        FontSize="13"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        TextColor="White" />

                    <!-- Birthdate -->
                    <VerticalStackLayout>
                        <Label Text="Birthdate" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <DatePicker
                                Date="{Binding Birthdate}"
                                FontSize="14"
                                HeightRequest="45"
                                TextColor="Black"
                                Margin="10,0" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Gender -->
                    <VerticalStackLayout>
                        <Label Text="Gender" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Picker
                                ItemsSource="{Binding GenderOptions}"
                                SelectedItem="{Binding SelectedGender}"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                TextColor="Black" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Location -->
                    <VerticalStackLayout>
                        <Label Text="Location" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Picker
                                ItemsSource="{Binding LocationOptions}"
                                SelectedItem="{Binding SelectedLocation}"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                TextColor="Black" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Mobile Number -->
                    <VerticalStackLayout>
                        <Label Text="Mobile Number" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Placeholder="Your contact number"
                                Keyboard="Telephone"
                                BackgroundColor="White"
                                TextColor="Black"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                Text="{Binding MobileNumber}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Next Button -->
                    <Button
                        Text="Next"
                        BackgroundColor="White"
                        TextColor="#7C4DFF"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="45"
                        Command="{Binding GoToNextCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
