<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.RegisterPage1"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="25"
            Padding="20">

            <!-- Logo -->
            <Image
                Source="plinkage.png"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center" />

            <!-- App Name -->
            <Label
                Text="PLinkage"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                TextColor="#333" />

            <!-- Card -->
            <Frame
                BackgroundColor="#7C4DFF"
                BorderColor="Transparent"
                CornerRadius="15"
                Padding="25"
                HasShadow="True"
                WidthRequest="300">

                <VerticalStackLayout Spacing="20">

                    <Label
                        Text="Tell Us About You!"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        TextColor="White" />

                    <!-- First Name -->
                    <VerticalStackLayout>
                        <Label Text="First Name" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Placeholder="What is your first name?"
                                BackgroundColor="White"
                                TextColor="Black"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                Text="{Binding FirstName}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Last Name -->
                    <VerticalStackLayout>
                        <Label Text="Last Name" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Placeholder="What is your last name?"
                                BackgroundColor="White"
                                TextColor="Black"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                Text="{Binding LastName}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Next Button -->
                    <Button
                        Text="Next"
                        BackgroundColor="White"
                        TextColor="#7C4DFF"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="45"
                        Command="{Binding GoToNextCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
