<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.RegisterPage2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RegisterPage2"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="25"
            Padding="20">

            <!-- Logo -->
            <Image
                Source="plinkage.png"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center" />

            <!-- App Name -->
            <Label
                Text="PLinkage"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                TextColor="#333" />

            <!-- Card -->
            <Frame
                BackgroundColor="#7C4DFF"
                BorderColor="Transparent"
                CornerRadius="15"
                Padding="25"
                HasShadow="True"
                WidthRequest="320">

                <VerticalStackLayout Spacing="15">

                    <Label
                        Text="Hello, User!"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        TextColor="White" />

                    <Label
                        Text="Input your login credentials!"
                        FontAttributes="Italic"
                        FontSize="13"
                        HorizontalOptions="Center"
                        TextColor="White" />

                    <!-- Email -->
                    <VerticalStackLayout>
                        <Label Text="Email" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Placeholder="Must be a unique email address"
                                Keyboard="Email"
                                BackgroundColor="White"
                                TextColor="Black"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                Text="{Binding Email}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout>
                        <Label Text="Password" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Placeholder="At least 8 characters or more"
                                IsPassword="True"
                                BackgroundColor="White"
                                TextColor="Black"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                Text="{Binding Password}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Confirm Password -->
                    <VerticalStackLayout>
                        <Label Text="Confirm Password" FontSize="14" TextColor="White" />
                        <Border
                            Stroke="Transparent"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                Placeholder="At least 8 characters or more"
                                IsPassword="True"
                                BackgroundColor="White"
                                TextColor="Black"
                                FontSize="14"
                                HeightRequest="45"
                                Margin="10,0"
                                Text="{Binding ConfirmPassword}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Next Button -->
                    <Button
                        Text="Next"
                        BackgroundColor="White"
                        TextColor="#7C4DFF"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="45"
                        Command="{Binding GoToNextCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
