<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.SendOfferView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls;assembly=PLinkageApp"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="25,40,25,25" Spacing="20">

            <!--  Back to Profile  -->
            <HorizontalStackLayout HorizontalOptions="End">
                <Label
                    FontAttributes="Bold"
                    Text="Back to profile"
                    TextColor="#7C4DFF"
                    VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    FontAttributes="Bold"
                    Text=" âœ•"
                    TextColor="#7C4DFF"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Send Offer"
                TextColor="#000" />

            <!--  Reusable InfoBanner Component  -->
            <controls:InfoBanner IconSource="plinkagenotext.png" Text="The first step to Linkage is to make an offer." />

            <!--  Select Project  -->
            <controls:LabeledEntry LabelText="Select Project" Text="{Binding ProjectName}" />

            <!--  Skill Provider  -->
            <controls:LabeledEntry LabelText="Skill Provider" Text="{Binding SkillProviderName}" />

            <!--  Requested Rate  -->
            <controls:LabeledEntry
                Keyboard="Numeric"
                LabelText="Requested Rate (Php per hour)"
                Placeholder="How much do you want to be paid?"
                Text="{Binding RequestedRate}" />

            <!--  Requested Time Frame  -->
            <controls:LabeledEntry
                Keyboard="Numeric"
                LabelText="Requested Time Frame (Hour)"
                Placeholder="How long do you want to work?"
                Text="{Binding RequestedTimeFrame}" />

            <!--  Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding SendOfferCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Send Offer"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
