<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.AdminHomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.AndroidControls"
    xmlns:viewmodels="clr-namespace:PLinkageApp.ViewModels"
    Title="AdminHomeView"
    Shell.NavBarIsVisible="False">

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy, Mode=OneWay}">

        <ScrollView>
            <VerticalStackLayout Padding="0,20" Spacing="7">
                <Image Source="plinkagenotext.svg" />
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Welcome, Admin!"
                    TextColor="#212121" />

                <FlexLayout
                    HorizontalOptions="CenterAndExpand"
                    JustifyContent="Center"
                    Wrap="Wrap">
                    <controls:StatCard
                        Title="Overall Active Projects"
                        Margin="0,0,5,0"
                        Value="{Binding ActiveProjectsValue}" />
                    <controls:StatCard
                        Title="Overall Completed Projects"
                        Margin="0,0,5,0"
                        Value="{Binding CompletedProjectsValue}" />
                    <controls:StatCard
                        Title="Employment Ratio"
                        Margin="0,0,5,0"
                        Value="{Binding EmploymentRatioValue}" />
                </FlexLayout>

                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Quick View of Active Projects"
                    TextColor="#212121" />

                <CarouselView ItemsSource="{Binding ProjectCards}" PeekAreaInsets="50">

                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <controls:ProjectCard
                                Title="{Binding Title}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminHomeViewModel}}, Path=ViewProjectCommand}"
                                CommandParameter="{Binding .}"
                                Description="{Binding Description}"
                                Location="{Binding Location}"
                                Skills="{Binding Skills}"
                                Slots="{Binding Slots}" />
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Quick View of Active Skill Providers For You"
                    TextColor="#212121" />

                <CarouselView ItemsSource="{Binding SkillProviderCards}" PeekAreaInsets="50">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <controls:SkillProviderCard
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminHomeViewModel}}, Path=ViewSkillProviderCommand}"
                                CommandParameter="{Binding .}"
                                Education="{Binding Education}"
                                Location="{Binding Location}"
                                Skills="{Binding Skills}"
                                UserName="{Binding UserName}"
                                UserRating="{Binding UserRating}" />
                        </DataTemplate>
                    </CarouselView.ItemTemplate>

                    <CarouselView.EmptyView>
                        <ContentView>
                            <Label
                                HorizontalOptions="Center"
                                Text="No skill providers found."
                                VerticalOptions="Center" />
                        </ContentView>
                    </CarouselView.EmptyView>
                </CarouselView>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>