<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.UpdateSkillView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.Controls;assembly=PLinkageApp"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20">

            <!-- Page Title -->
            <Label
                Text="Update Skill"
                FontAttributes="Bold"
                FontSize="20"
                TextColor="Black" />

            <!-- Info Box -->
            <Border
                BackgroundColor="#F2ECFF"
                StrokeThickness="0"
                Padding="10"
                StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout Spacing="10">
                    <Label
                        Text="Make sure your skill accurately reflects you."
                        TextColor="#555"
                        FontSize="13"
                        VerticalOptions="Center" />
                    <Image
                        Source="plinkage.png"
                        HeightRequest="22"
                        WidthRequest="22"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>

            <!-- Skill Name -->
            <controls:LabeledEntry
                LabelText="Skill Name"
                Placeholder="What is your skill?"
                Text="{Binding SkillName}" />

            <!-- Description -->
            <controls:LabeledEntry
                LabelText="Description"
                Placeholder="Tell us more about it."
                Text="{Binding SkillDescription}" />

            <!-- Skill Level -->
            <controls:LabeledEntry
                LabelText="Skill Level"
                Placeholder="How skilled are you from 1 to 5?"
                Text="{Binding SkillLevel}" />

            <!-- Time Acquired -->
            <controls:LabeledDatePicker
                LabelText="Time Acquired"
                Date="{Binding TimeAcquired}" />

            <!-- Organization Involved -->
            <controls:LabeledEntry
                LabelText="Organization Involved"
                Placeholder="With whom did you get this skill?"
                Text="{Binding OrganizationInvolved}" />

            <!-- Years of Experience -->
            <controls:LabeledEntry
                LabelText="Years of Experience"
                Placeholder="How long did you practice this skill?"
                Text="{Binding YearsOfExperience}" />

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="10">
                <Button
                    Text="Update"
                    Command="{Binding UpdateSkillCommand}"
                    BackgroundColor="#7C4DFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="5"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="45" />

                <Button
                    Text="Cancel"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="White"
                    TextColor="#7C4DFF"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    FontAttributes="Bold"
                    CornerRadius="5"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="45" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
