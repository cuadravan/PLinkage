<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.UpdateSkillView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.AndroidControls"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20"
            VerticalOptions="Center">

            <!--  Page Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Update Skill"
                TextColor="Black" />

            <!--  Info Box  -->
            <!--<Border
                BackgroundColor="#F2ECFF"
                StrokeThickness="0"
                Padding="10"
                StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout Spacing="10">
                    <Label
                        Text="Make sure your skill accurately reflects you."
                        TextColor="#555"
                        FontSize="13"
                        VerticalOptions="Center" />
                    <Image
                        Source="plinkage.png"
                        HeightRequest="22"
                        WidthRequest="22"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>-->

            <controls:InfoBanner IconSource="plinkage.png" Text="Make sure your skill accurately reflects you." />

            <!--  Skill Name  -->
            <controls:LabeledEntry
                LabelText="Skill Name"
                Placeholder="What is your skill?"
                Text="{Binding SkillName}" />

            <!--  Description  -->
            <controls:LabeledEntry
                LabelText="Description"
                Placeholder="Tell us more about it."
                Text="{Binding SkillDescription}" />

            <!--  Skill Level  -->
            <controls:LabeledPickerNonBrowse LabelText="Skill Level" PlaceholderText="How skilled are you from 1 to 5?" />

            <!--  Time Acquired  -->
            <controls:LabeledDatePicker Date="{Binding TimeAcquired}" LabelText="Time Acquired" />

            <!--  Organization Involved  -->
            <controls:LabeledEntry
                LabelText="Organization Involved"
                Placeholder="With whom did you get this skill?"
                Text="{Binding OrganizationInvolved}" />

            <!--  Years of Experience  -->
            <controls:LabeledEntry
                LabelText="Years of Experience"
                Placeholder="How long did you practice this skill?"
                Text="{Binding YearsOfExperience}" />

            <!--  Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding UpdateSkillCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Update"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
