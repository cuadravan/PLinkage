<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.AddSkillView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.AndroidControls"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="25,50,25,25" Spacing="5" VerticalOptions="Center">

            <Label Text="Add Skill"
                   FontAttributes="Bold"
                   FontSize="22"
                   TextColor="Black"
                   Margin="0,0,0,10" />

            <!--<Frame BackgroundColor="#F3EFFF"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False">
                <HorizontalStackLayout Spacing="10">
                    <Image Source="plinkage.png"
                           HeightRequest="25"
                           WidthRequest="25"
                           VerticalOptions="Center" />
                    <Label Text="Skills will make you more attractive to employers."
                           FontSize="14"
                           TextColor="Black"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Frame>-->

            <controls:InfoBanner 
                Text="Skills will make you more attractive to employers."
                IconSource="plinkage.png" />
            <!-- Skill Name -->
            <controls:LabeledEntry LabelText="Skill Name"
                                     Placeholder="What is your skill?"
                                     Text="{Binding SkillName}" />

            <!-- Description -->
            <controls:LabeledEntry LabelText="Description"
                                     Placeholder="Tell us more about it."
                                     Text="{Binding SkillDescription}" />

            <!-- Skill Level -->
            <controls:LabeledPickerNonBrowse LabelText="Skill Level"
                                     PlaceholderText="How skilled are you from 1 to 5?" />

            <!-- Time Acquired -->
            <controls:LabeledDatePicker LabelText="Time Acquired"
                                          Date="{Binding TimeAcquired}" />

            <!-- Organization -->
            <controls:LabeledEntry LabelText="Organization Involved"
                                     Placeholder="With whom did you get this skill?"
                                     Text="{Binding OrganizationInvolved}" />

            <!-- Years of Experience -->
            <controls:LabeledEntry LabelText="Years of Experience"
                                     Placeholder="How long did you practice this skill?"
                                     Text="{Binding YearsOfExperience}" />

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Add Skill"
                        BackgroundColor="#7C4DFF"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="45"
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding AddSkillCommand}" />

                <Button Text="Cancel"
                        BackgroundColor="Transparent"
                        TextColor="#7C4DFF"
                        BorderColor="#7C4DFF"
                        BorderWidth="1"
                        CornerRadius="8"
                        HeightRequest="45"
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding CancelCommand}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
