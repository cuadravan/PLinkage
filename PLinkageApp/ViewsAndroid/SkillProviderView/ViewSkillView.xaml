<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkageApp.ViewsAndroid.ViewSkillView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PLinkageApp.AndroidControls"
    BackgroundColor="#F8F9FC"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="25,40,25,25"
            Spacing="20"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="View Skill"
                TextColor="Black" />

            <!--  Info Box  -->
            <!--<Border
                BackgroundColor="#F2ECFF"
                StrokeThickness="0"
                Padding="10"
                StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout Spacing="10">
                    <Label
                        Text="You are currently viewing a skill from Van Cuadra."
                        TextColor="#555"
                        FontSize="13"
                        VerticalOptions="Center" />
                    <Image
                        Source="plinkage.png"
                        HeightRequest="22"
                        WidthRequest="22"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>-->

            <controls:InfoBanner IconSource="plinkage.png" Text="You are currently viewing a skill from Van Cuadra." />

            <!--  Skill Fields  -->
            <controls:LabeledEntry
                IsEnabled="False"
                LabelText="Skill Name"
                Text="{Binding SkillName}" />

            <controls:LabeledEntry
                IsEnabled="False"
                LabelText="Description"
                Text="{Binding SkillDescription}" />

            <controls:LabeledEntry
                IsEnabled="False"
                LabelText="Skill Level"
                Text="{Binding SkillLevel}" />

            <controls:LabeledDatePicker
                Date="{Binding TimeAcquired}"
                IsEnabled="False"
                LabelText="Time Acquired" />

            <controls:LabeledEntry
                IsEnabled="False"
                LabelText="Organization Involved"
                Text="{Binding OrganizationInvolved}" />

            <controls:LabeledEntry
                IsEnabled="False"
                LabelText="Years of Experience"
                Text="{Binding YearsOfExperience}" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#7C4DFF"
                    Command="{Binding UpdateSkillCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Update Skill"
                    TextColor="White" />

                <Button
                    BackgroundColor="White"
                    BorderColor="#7C4DFF"
                    BorderWidth="1"
                    Command="{Binding CancelCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="FillAndExpand"
                    Text="Return"
                    TextColor="#7C4DFF" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
